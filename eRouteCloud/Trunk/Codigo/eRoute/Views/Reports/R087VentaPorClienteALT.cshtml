@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}
    <script src="https://code.angularjs.org/1.0.8/i18n/angular-locale_es-mx.js"></script>
<script src="~/Controllers/js/controllers/r087VentaPorClienteALTController.js"></script>
<link href="~/Assets/CSS/StyleReports.css" rel="stylesheet" />

<div ng-controller="r087VentaPorClienteALTController as ctrl" ng-init="ctrl.StartReport('@ViewBag.VAVClave')">

    <div class="panel-heading Header-Label"> <h4> {{ctrl.title}} </h4> </div>

    <div class="row" id="row-margin">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">
                        Centro De Distribución
                    </div>
                    <div class="panel-body">
                        <md-autocomplete flex required
                                         md-input-name="autocompleteField"
                                         md-selected-item="ctrl.selectedItem"
                                         md-search-text="ctrl.searchText"
                                         md-selected-item-change="ctrl.GetDates();
                                        ctrl.OnChangeRutVen(ctrl.selectedItem.Clave);
                                        ctrl.GetSchemesClients(ctrl.selectedItem.Clave);
                                        ctrl.ResetItems();"
                                         md-items="item in ctrl.QuerySearch(ctrl.searchText)"
                                         md-item-text="item.Nombre"
                                         md-min-length="0"
                                         placeholder="Seleccionar Centro de Distribución">
                            <md-item-template>
                                <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{ item.Nombre }}</span>
                            </md-item-template>
                            <md-not-found>
                                No se han encontrado resultados para "{{ ctrl.searchText }}".
                            </md-not-found>
                        </md-autocomplete>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" ng-if="ctrl.selectedItem">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter"> Fechas </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <md-input-container id="containerDate">
                                <label>Rango</label>
                                <md-select ng-model="ctrl.State" ng-change="ctrl.OnSelectChange(ctrl.State,1)">
                                    <md-option ng-repeat="state in ctrl.dateState" ng-value="state.Nombre">
                                        {{ state.Nombre }}
                                    </md-option>
                                </md-select>
                            </md-input-container>
                            <md-datepicker ng-model="ctrl.startDate" md-placeholder="Fecha" md-max-date="ctrl.todayDate" onkeydown="return false"></md-datepicker>
                            <md-datepicker ng-model="ctrl.endDate" ng-show="ctrl.showSelect" md-placeholder="Fecha" md-min-date="ctrl.startDate" md-max-date="ctrl.todayDate" ng-change="ctrl.showErrorForm = false;" onkeydown="return false"></md-datepicker>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-if="ctrl.selectedItem">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Opciones
                </div>
                <div class="panel-body">
                    <md-switch class="md-thumb md-bar" ng-model="ctrl.selectedSwitchRutVen" aria-label="Filter" ng-change="ctrl.OnChangeRutVen(ctrl.selectedItem.Clave)">
                        Filtrar Por {{ ctrl.textSwitchRutVen }}
                    </md-switch>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-if="ctrl.selectedItem">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter" ng-if="!ctrl.selectedSwitchRutVen">
                <div class="panel-heading Panel-Filter">
                    Rutas
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="ctrl.queryRoute" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-checkbox ng-model="ctrl.selectAllRoutes" ng-click="ctrl.SelectAllCheckboxesRoutes(ctrl.selectAllRoutes);" id="checkBoxSelectAll">Seleccionar todos</md-checkbox>
                    <md-divider id="lineDivider"></md-divider>
                    <md-list id="listCheckBox">
                        <md-list-item id="itemListCheckBox" ng-repeat="route in ctrl.routes | filter: ctrl.queryRoute">
                            <md-checkbox id="itemCheckBoxValue" ng-disabled="route.Disabled" ng-model="route.Checked" ng-change="ctrl.CountRoutes();"></md-checkbox>
                            <p> {{ route.Nombre }} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>

            <div class="panel panel-default Panel-Default-Filter" ng-if="ctrl.selectedSwitchRutVen">
                <div class="panel-heading Panel-Filter">
                    Vendedores
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="ctrl.querySeller" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-checkbox ng-model="ctrl.inactSellers" ng-change="ctrl.GetSellers(ctrl.selectedItem.Clave, '0, 1');" id="checkBoxSelectAll">Mostrar Inactivos</md-checkbox>
                    <md-divider id="lineDivider"></md-divider>
                    <md-list id="listRadioButtom">
                        <md-radio-group ng-model="ctrl.selectedSeller" ng-change="ctrl.ResetItems(); ctrl.GetClients(null, null, ctrl.selectedSeller); ctrl.querySeller='';">
                            <md-list-item ng-repeat="seller in ctrl.sellers | filter: ctrl.querySeller" id="itemListRadioButtom">
                                <md-radio-button ng-value="seller.Clave" class="md-primary" ng-cloak>
                                    <p>{{ seller.Nombre }}</p>
                                </md-radio-button>
                            </md-list-item>
                        </md-radio-group>
                    </md-list>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Esquemas Clientes
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="ctrl.querySchemes" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-list id="listRadioButtom">
                        <md-radio-group ng-model="ctrl.selectedClientScheme" ng-change="ctrl.GetClients(ctrl.selectedClientScheme, ctrl.routes, ctrl.selectedSeller); ctrl.querySchemes = '';">
                            <md-list-item ng-repeat="scheme in ctrl.schemes | filter: ctrl.querySchemes" id="itemListRadioButtom">
                                <md-radio-button class="md-primary" ng-value="scheme.Clave">
                                    <p> {{ scheme.Nombre }} </p>
                                </md-radio-button>
                            </md-list-item>
                        </md-radio-group>
                    </md-list>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Clientes
                </div>
                <div class="panel-body Panel-Body-Filter" ng-if="ctrl.clients != undefined">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin" ng-show="ctrl.clients != undefined">
                        <input ng-model="ctrl.queryClients" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-checkbox ng-model="ctrl.selectAllClients" ng-show="ctrl.clients != undefined" ng-click="ctrl.SelectAllCheckboxesClients(ctrl.selectAllClients)" id="checkBoxSelectAll">Seleccionar todos</md-checkbox>
                    <md-divider id="lineDivider" ng-show="ctrl.clients != undefined"></md-divider>
                    <md-list id="listCheckBox">
                        <md-list-item id="itemListCheckBox" ng-repeat="client in ctrl.clients | filter: ctrl.queryClients">
                            <md-checkbox id="itemCheckBoxValue" ng-disabled="client.Disabled" ng-model="client.Checked" ng-change="ctrl.CountClients();"></md-checkbox>
                            <p> {{ client.Nombre }} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>
    </div>

    <div id="viewer" class="row" ng-if="ctrl.selectedItem">
        <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ShowError">
            <div class="error-message col-md-12">{{ ctrl.ShowError }}</div>
        </div>
    </div>

    <div class="row" ng-if="ctrl.selectedItem">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <md-button type="submit" ng-click="ctrl.Submit()" class="md-raised login-input pull-right" id="buttomReports">Generar reporte</md-button>
        </div>
    </div>
</div>