<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .scroll-RUTA {
            width: 100%;
            height: 260px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div id="RutaBox" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- dialog header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title">Selección de Rutas</h2>
                </div>
                <!-- dialog body -->
                <div class="modal-body">
                    <form>
                        <div class="col-md-6 pull-right input-group">
                            <span class="input-group-addon"><img width="16" height="16" src="/Content/images/buscar.png" /></span>
                            <input type="text" placeholder="{{translation.BTBuscar}}" class="form-control" ng-model="search" />
                        </div>
                    </form>
                    <br /><br />
                    <form role="form">
                        <div class="container">
                            <div class="form-group">
                                <div class="scroll-RUTA">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr id="Header-table">
                                                <th></th>
                                                <th>{{translation.RUTRUTClave}}</th>
                                                <th>{{translation.RUTDescripcion}}</th>
                                                <th>{{translation.RUTTipo}}</th>
                                                <th>{{translation.RUTTipoEstado}}</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="r in rutasDisp | filter:search">

                                                <td><input type="checkbox" ng-model="Clave.$index" name="{{'Clave' + $index }}" ng-false-value="'NO'" ng-true-value="'YES'" ng-click="addRuta(r.RUTClave,r.Descripcion, Clave.$index)"></td>
                                                <td>{{r.RUTClave}}</td>
                                                <td>{{r.Descripcion}}</td>
                                                <td>
                                                    <span ng-show="r.Tipo == 1">
                                                        Venta
                                                    </span>
                                                    <span ng-show="r.Tipo == 2">
                                                        PreVenta
                                                    </span>
                                                    <span ng-show="r.Tipo == 3">
                                                        Reparto
                                                    </span>
                                                </td>
                                                <td>
                                                    <span ng-show="r.TipoEstado == 0">
                                                        Inactivos
                                                    </span>
                                                    <span ng-show="r.TipoEstado == 1">
                                                        Activo
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- dialog buttons -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{translation.BTAceptar}}</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
