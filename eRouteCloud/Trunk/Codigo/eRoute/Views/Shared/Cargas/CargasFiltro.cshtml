<html>
<head>
    <style>
    </style>
</head>
<body>
    <div id="FiltroCargas" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close-modal pull-right" data-dismiss="modal" aria-label="Close" ng-click="hiddenFiltroCargas()"><span aria-hidden="true">&times;</span></button>
                    <h3 class="modal-title"> {{translation.ERMTRPESC_FFechas}} </h3>
                </div>
                <form name="formFilterReport" class="form-horizontal form-valor" ng-class="{submitted:formFilterReport.submitted}" novalidate>
                    <div class="modal-body">
                        <div class="row form-group">
                            <div class="row col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <div class="checkbox">
                                        <label><input id="FechaReporte" name="FechaReporte" type="checkbox" ng-model="FechaReporte" ng-init="FechaReporte = true" ng-false-value="false" ng-true-value="true">{{translation.XFecha}}</label>
                                    </div>
                                </div>
                                <div class="col-md-5 col-sm-5 col-xs-5">
                                    <select name="FechaReporteSelect" id="FechaReporteSelect" ng-model="FechaReporteSelect" ng-init="FechaReporteSelect = '1'" ng-change="updateStatus(FechaReporteSelect, FechaReporte)" class="form-control" data-modal="modal" ng-options="data.VAVClave as data.Descripcion for data in dateStatus" ng-disabled="!FechaReporte"></select>
                                </div>
                            </div>
                            <div class="row col-md-12 col-sm-12 col-xs-12">
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <input type="date" id="input-date" ng-model="dateReportFilter1" min="{{mindateReport}}" max="{{maxdateReport}}" ng-required="FechaReporte" ng-disabled="!FechaReporte" onkeydown="return false" />
                                </div>
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <input type="date" id="input-date" ng-model="dateReportFilter2" min="{{mindateReport}}" max="{{maxdateReport}}" ng-required="FechaReporte" ng-disabled="dateFilter2Disabled" onkeydown="return false" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- dialog buttons -->
                    <div class="modal-footer">
                        <button type="submit" data-dismiss="modal" ng-click="BTNAceptarReporte()" ng-disabled="formFilterReport.$invalid" class="btn btn-default">{{translation.BTAceptar}}</button>
                        <button type="button" data-dismiss="modal" ng-click="hiddenFiltroCargas()" class="btn btn-default">{{translation.BTCancelar}}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>