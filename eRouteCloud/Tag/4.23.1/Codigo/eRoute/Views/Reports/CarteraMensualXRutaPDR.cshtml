@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/carteraMensualXRutaPDRController.js"></script>
<link href="~/Assets/CSS/StyleReports.css" rel="stylesheet" />

<div ng-controller="carteraMensualXRutaPDRController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default" style="background-color:#B40002; border-radius:15px;">
                <div class="panel-heading" style="background-color:#B40002; color:white; border-radius:15px;">
                    <h4> {{ctrl.titulo}} </h4>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Centro De Distribución
                </div>
                <div class="panel-body">
                    <md-autocomplete flex required
                                     md-input-name="autocompleteField"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.showList = false;"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.GetDates();
                                        ctrl.ShowItems(ctrl.selectedItem.Clave);
                                        ctrl.GetRoutes(ctrl.selectedItem.Clave);"
                                     md-items="item in ctrl.QuerySearch(ctrl.searchText)"
                                     md-item-text="item.Nombre"
                                     md-min-length="0"
                                     placeholder="Seleccionar Centro de Distribución">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.Nombre}}</span>
                        </md-item-template>
                        <md-not-found>
                            No se han encontrado resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                    </md-autocomplete>
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" ng-show="ctrl.showList" ng-disabled="ctrl.showList">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Fechas
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <md-input-container>
                            <label>Rango</label>
                            <md-select ng-model="ctrl.State" ng-change="ctrl.OnSelectChange(ctrl.State,0)">
                                <md-option ng-repeat="state in ctrl.dateState" value="{{state.Nombre}}">
                                    {{state.Nombre}}
                                </md-option>
                            </md-select>
                        </md-input-container>
                        <md-datepicker ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" ng-change="ctrl.date2=ctrl.date1; ctrl.OnSelectChange(ctrl.State,1); ctrl.showErrorForm = false;" onkeydown="return false"></md-datepicker>
                        <md-datepicker ng-model="ctrl.date2" ng-show="ctrl.showSelect" md-placeholder="Fecha" md-min-date="ctrl.date1" md-max-date="ctrl.minDate" ng-change="ctrl.showErrorForm = false;" onkeydown="return false"></md-datepicker>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="ctrl.showList" ng-disabled="ctrl.showList">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Rutas
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="queryRoute" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-divider id="lineDivider"></md-divider>
                    <md-list id="listRadioButtom">
                        <md-radio-group ng-model="RutaId" ng-change="queryRoute='';">
                            <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute" id="itemListRadioButtom">
                                <md-radio-button ng-value="route.Clave" class="md-primary" ng-cloak>
                                    <p>{{route.Nombre}}</p>
                                </md-radio-button>
                            </md-list-item>
                        </md-radio-group>
                    </md-list>
                </div>
            </div>
        </div>
    </div>

    <div id="viewer" class="row" ng-show="ctrl.showList">
        <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ShowError">
            <div class="error-message col-md-12">{{ctrl.ShowError}}</div>
        </div>
    </div>

    <div class="row" ng-show="ctrl.showList" ng-disabled="ctrl.showList">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" id="buttomReports">Generar reporte</md-button>
        </div>
    </div>
</div>