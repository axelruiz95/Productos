@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}
<script src="~/Controllers/js/controllers/ventasporCodigoDetalladoUNIController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<style>
    .listdemoListControls md-divider {
        margin-top: 0;
        margin-bottom: 0;
    }

    .listdemoListControls md-list {
        padding-top: 0;
    }

    .listdemoListControls md-list-item > p,
    .listdemoListControls md-list-item > ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > ._md-list-item-inner > p {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .datepickerdemoBasicUsage {
    }

        .datepickerdemoBasicUsage md-content {
            padding-bottom: 200px;
        }

        .datepickerdemoBasicUsage .validation-messages {
            font-size: 12px;
            color: #dd2c00;
            margin: 10px 0 0 25px;
        }
</style>

<div ng-controller="ventasporCodigoDetalladoUNIController as ctrl">
    <h4>Ventas por Código Detallado</h4>
    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin:20px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.GetSellers(ctrl.selectedItem.value); ctrl.nShowLists(ctrl.selectedItem.value); ctrl.GetRoutes(ctrl.selectedItem.value)"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No se han encontrado resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                        <div ng-messages="searchForm.autocompleteField.$error" ng-if="searchForm.autocompleteField.$touched">
                            <div ng-message="required">You <b>must</b> have a favorite state.</div>
                        </div>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>

    <!--Reporte detallado o resumido-->
    <div class="row" style="margin-top:30px;margin-left:0px;" ng-show="ctrl.showList">
        <div class="row">
            <md-radio-group ng-model="ctrl.Radio" ng-change="ctrl.TiLock=true">
                <div class="col-lg-2">
                    <md-radio-button class="md-primary" ng-value="true" style="margin-left:4px; margin-bottom:30px;">Completo</md-radio-button>
                </div>
                <div class="col-lg-2">
                    <md-radio-button class="md-primary" ng-value="false" style="margin-left:4px; margin-bottom:30px;">Resumen</md-radio-button>
                </div>
            </md-radio-group>
        </div>
    </div>

    <!--Controles para mostrar y seleccionar rutas-->
    <div class="row" style="margin-top:30px;margin-left:0px;" ng-show="ctrl.showList">

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Rutas
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryRoute" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-list ng-cloak style="max-height:350px;overflow-y:auto;">
                    <md-radio-group ng-model="ctrl.RUTClave" ng-repeat="route in ctrl.routes | filter:queryRoute" ng-change="ctrl.RLock=true">
                        <md-radio-button ng-value="route.RUTClave" class="md-primary" ng-cloak>
                            {{ route.RUTClave }} | {{route.Descripcion}}
                        </md-radio-button>
                    </md-radio-group>
                </md-list>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 list-margin">
            Esquema de Producto
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryProduct" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-list ng-cloak style="max-height:350px;overflow-y:auto;">
                    <md-radio-group ng-model="ctrl.EsquemaId" ng-repeat="product in ctrl.products | filter:queryProduct" ng-change="ctrl.GetProductsSchemes(ctrl.EsquemaId); ctrl.FLock=true">
                        <md-radio-button ng-value="product.EsquemaId" class="md-primary" ng-cloak width="" style="display:inline-block;">
                            {{ product.EsquemaId }} | {{product.Nombre}} &ensp;&thinsp;&thinsp;&thinsp;
                        </md-radio-button>
                    </md-radio-group>
                </md-list>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Productos
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryProductsScheme" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-checkbox style="margin-left:4px;" ng-disabled="ProductsSchemesSelectallCheckBox" ng-model="selectAll" ng-click="ctrl.SelectAllCheckboxesProductsSchemes(selectAll)" >Seleccionar todos</md-checkbox>
                <md-divider></md-divider>
                <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                    <md-list-item ng-repeat="productscheme in ctrl.productschemes | filter:queryProductsScheme">
                        <md-checkbox ng-disabled="productscheme.Disabled" ng-model="productscheme.Checked" ng-change=""></md-checkbox>
                        <p> {{ productscheme.Clave }} | {{productscheme.Nombre}} </p>
                    </md-list-item>
                </md-list>
            </div>
        </div>
    </div>

    <!--Controles para mostrar y seleccionar Fecha-->
    <div class="row" ng-show="ctrl.showList" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Fecha de Carga</label>
                <md-select ng-model="ctrl.State" ng-change="ctrl.OnSelectChange(ctrl.State)" ng-disabled="true">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}" ng-selected="{{state.Descripcion === 'Igual'}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style="background-color: #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker ng-show="ctrl.showSelect" style="background-color: #f7f7f7 !important;" ng-model="ctrl.date2" md-placeholder="Fecha" md-max-date="ctrl.minDate" ng-init="ctrl.date2 = ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>

        <!--Boton para generar Reporte-->
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.dateState, ctrl.RUTClave, ctrl.EsquemaId, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
        </div>
    </div>

    <div id="viewer">

    </div>
</div>