
@{
    ViewBag.Title = "Inventario por almacén";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/inventarioAlmacenController.js"></script>

<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />

<style>
    .listdemoListControls md-divider {
        margin-top: 0;
        margin-bottom: 0;
    }

    .listdemoListControls md-list {
        padding-top: 0;
    }

    .listdemoListControls md-list-item > p,
    .listdemoListControls md-list-item > ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > ._md-list-item-inner > p {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .datepickerdemoBasicUsage {
    }

        .datepickerdemoBasicUsage md-content {
            padding-bottom: 200px;
        }

        .datepickerdemoBasicUsage .validation-messages {
            font-size: 12px;
            color: #dd2c00;
            margin: 10px 0 0 25px;
        }
</style>

<div ng-controller="inventarioAlmacenController as ctrl">
    <h4>Toma de Inventario y Ventas del Cliente</h4>
    <div class="row" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Rango</label>
                <md-select ng-model="ctrl.State" ng-model-options="{trackBy: '$value.VAVClave'}"> @*ng-change="ctrl.OnSelectChange(ctrl.State)">*@
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option> 
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style="background-color: #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false" ng-change="ctrl.nShowLists(1)"></md-datepicker>
        </div>
    </div>

    <div class="col-lg-10 col">
        <div class="row" ng-show="ctrl.showList" style="margin-top:20px;margin-left:0px;">
            <div>
                <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.RUTClave, ctrl.clients,ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-left" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
            </div>
        </div>
    </div>
</div>