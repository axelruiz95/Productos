<div id="AsignarClientesBox" class="modal fade">
    <div class="modal-dialog" id="R">
        <div class="modal-content">
            <!-- dialog header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="Buscar=''; Cancelar()"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title">{{translation.ERMRUTESC_IGeneral}}</h2>
            </div>

            <!-- dialog body -->

            <div class="scroll modal-body">
                <form role="form">
                    <div class="container">

                        <div class="row" style="padding-left:1%">
                            <!--Filtrado de clientes-->
                                <md-radio-group ng-model="Radio" ng-init="Radio=1" ng-change="AsignarClientesNuevos(Radio)">
                                    <div class="col-md-3">
                                        <md-radio-button class="md-primary" ng-model="TipoFrecuencia" ng-value="1" style="margin-left:4px; margin-bottom:30px;" ng-change="ctrl.Radio=ctrl.TipoFrecuencia">Misma Frecuencia</md-radio-button>
                                    </div>
                                    <div class="col-md-3">
                                        <md-radio-button class="md-primary" ng-model="TipoFrecuencia" ng-value="2" style="margin-left:4px; margin-bottom:30px;" ng-change="ctrl.Radio=ctrl.TipoFrecuencia">Diferente Frecuencia</md-radio-button>
                                    </div>
                                    <div class="col-md-3">
                                        <md-radio-button class="md-primary" ng-model="TipoFrecuencia" ng-value="3" style="margin-left:4px; margin-bottom:30px;" ng-change="ctrl.Radio=ctrl.TipoFrecuencia">Sin Frecuencia</md-radio-button>
                                    </div>
                                </md-radio-group>
                        </div>

                        <div class="row container valores margen-tabla header-valores">
                            <!--Buscar-->
                            <div class="col-md-6">
                                <input type="text" name="Buscar" ng-model="Buscar" class="form-control" placeholder="Buscar Cliente..." />
                            </div>
                            <!--Paginacion-->
                            <div class="col-md-6" style="margin: 0px 0;">
                                <dir-pagination-controls max-size="10"
                                                         direction-links="true"
                                                         boundary-links="true"
                                                         style="margin: 0px 0;">
                                </dir-pagination-controls>
                            </div>
                        </div>

                        <!--Tabla-->
                        <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group" style="padding-right:0px;">
                            <table class="table table-bordered">
                                <tr>
                                    <td></td>
                                    <td>{{translation.XNumeroCliente}}</td>
                                    <td>{{translation.BONRazonSocial}}</td>
                                    <td>{{translation.XNegocio}}</td>
                                    <td>{{translation.XCalle}}</td>
                                    <td>{{translation.XExterior}}</td>
                                    <td>{{translation.XColonia}}</td>
                                    <td>{{translation.XCP}}</td>
                                    <td>{{translation.XMunicipio}}</td>
                                    <td>{{translation.XEntidad}}</td>
                                    <td>{{translation.XPais}}</td>
                                </tr>
                                <tr dir-paginate="x in NuevosList | filter:Buscar | itemsPerPage:100" ng-init="marcar()">
                                    <td><input type="checkbox" ng-model="Clave.$index" name="{{'Clave' + $index }}" ng-checked="{{x.Checked}}" ng-false-value="'NO'" ng-true-value="'YES'" ng-click="KeyGen();addCliente(x.Clave, x.ClienteClave, x.RazonSocial, x.NombreCorto, x.NombreContacto, x.ClienteDomicilioID, x.Calle, x.Colonia, x.Poblacion, x.SECId, Clave.$index); Reordenar();"></td>
                                    <td>{{x.Clave}}</td>
                                    <td>{{x.RazonSocial}}</td>
                                    <td>{{x.NombreCorto}}</td>
                                    <td>{{x.Calle}}</td>
                                    <td>{{x.Numero}}</td>
                                    <td>{{x.Colonia}}</td>
                                    <td>{{x.CodigoPostal}}</td>
                                    <td>{{x.Poblacion}}</td>
                                    <td>{{x.Entidad}}</td>
                                    <td>{{x.Pais}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>

            <!-- dialog buttons -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="Buscar=''; VaciarClientes();">{{translation.BTAceptar}}</button>
            </div>
        </div>
    </div>
</div>
