@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}
<script src="~/Controllers/js/controllers/improductXClienteController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<style>
    .error-message {
        text-align: right;
        font-weight: 500;
        font-size: 16px;
    }
</style>

<div ng-controller="improductXClienteController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <h4> {{ctrl.titulo}} </h4>

    <!--Llenado del combo para los CEDIS-->
    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin:20px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.GetSellers(ctrl.selectedItem.value);
                                        ctrl.nShowLists(ctrl.selectedItem.value);
                                        ctrl.GetRoutes(ctrl.selectedItem.value);
                                        selectAll = false;
                                        queryRoute = '';
                                        querySellers = '';
                                        ctrl.State = undefined;
                                        ctrl.date1 = undefined;
                                        ctrl.date2 = undefined;
                                        ctrl.showSelect = false;
                                        ctrl.showErrorForm = false"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución"
                                     md-autoselect="true">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText" md-highligth-flags="^i">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No se han encontrado resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                        <div ng-messages="searchForm.autocompleteField.$error" ng-if="searchForm.autocompleteField.$touched">
                            <div ng-message="required">You <b>must</b> have a favorite state.</div>
                        </div>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top:30px;margin-left:0px;" ng-show="ctrl.showList">
        <!--Seleccion de Ruta, se bloquea si se selecciona un vendedor-->
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Rutas
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryRoute" type="text" style="width:90%; margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-checkbox style="margin-left:4px;" ng-disabled="RoutesSelectallCheckBox" ng-model="selectAll" ng-click="ctrl.SelectAllChekboxesAllRoutes(selectAll)" ng-change="ctrl.ClearSellersCheckBoxes()">Seleccionar todos</md-checkbox>
                <md-divider></md-divider>
                <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                    <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute">
                        <md-checkbox ng-disabled="route.Disabled" ng-model="route.Checked" ng-change="ctrl.ClearSellersCheckBoxes()"></md-checkbox>
                        <p style="margin-left: -20px"> {{ route.RUTClave }} | {{route.Descripcion}} </p>
                    </md-list-item>
                </md-list>
            </div>
        </div>

        <!--Seleccion de Vendedor, se bloquea si se selecciona una ruta-->
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Vendedores
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="querySellers" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-list ng-cloak style="max-height:350px; overflow-y:auto;">
                    <md-radio-group ng-model="ctrl.VendedorId" ng-repeat="seller in ctrl.sellers | filter:querySellers" ng-change="ctrl.ClearRouteCheckBoxes(ctrl.VendedorId)">
                        <md-radio-button ng-disabled="seller.Disabled" ng-value="seller.VendedorId" class="md-primary" ng-cloak>
                            {{ seller.VendedorId }} | {{seller.Nombre}}
                        </md-radio-button>
                    </md-radio-group>
                </md-list>
            </div>
        </div>
    </div>

    <!--Filtro de fecha-->
    <div class="row" ng-show="ctrl.showList" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Rango</label>
                <md-select ng-model="ctrl.State" ng-change="ctrl.OnSelectChange(ctrl.State)">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style="background-color: #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker ng-show="ctrl.showSelect" style="background-color: #f7f7f7 !important;" ng-model="ctrl.date2" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.dateState, ctrl.routes, ctrl.sellers,ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
        </div>
    </div>

    <div id="viewer" class="row" ng-show="ctrl.showList">
        <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ErrorEnviar">
            <div class="error-message col-md-11">{{ctrl.ErrorEnviar}}</div>
        </div>
    </div>
</div>