
@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/pedidosConfirmadosPRSController.js"></script>

<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />
<link href="~/Assets/CSS/StyleReports.css" rel="stylesheet" />

<div ng-controller="pedidosConfirmadosPRSController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">

    <div class="panel-heading Header-Label"> <h4> {{ctrl.titulo}} </h4> </div>

    <div class="row" id="row-margin">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter"> Centro De Distribución </div>
                    <div class="panel-body">
                        <md-autocomplete flex required ng-disabled="ctrl.isDisabled"
                                         md-input-name="autocompleteField"
                                         md-no-cache="ctrl.noCache"
                                         md-selected-item="ctrl.selectedItem"
                                         md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                         md-search-text="ctrl.searchText"
                                         md-selected-item-change="ctrl.GetSellers(ctrl.selectedItem.value); ctrl.nShowLists(ctrl.selectedItem); ctrl.GetRoutes(ctrl.selectedItem.value)"
                                         ctrl.GetRoutes(ctrl.selectedItem.Clave);
                                         ctrl.GETSeller(ctrl.selectedItem.Clave);
                                         ctrl.GetEsquemas(ctrl.selectedItem.Clave);
                                         ctrl.getClientes(ctrl.selectedItem.Clave);
                                         selectAllRoutes=false;
                                         selectAllSeller=false;
                                         selectAllSchemesCli=false;
                                         selectAllSchemesPro = false;
                                         selectAllClients=false;
                                         ctrl.ResetValues();"
                                         md-items="item in ctrl.querySearch(ctrl.searchText)"
                                         md-item-text="item.Nombre"
                                         md-min-length="0"
                                         placeholder="Seleccionar centro de distribución"
                                         md-autoselect="true">
                            <md-item-template>
                                <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.Nombre}}</span>
                            </md-item-template>
                            <md-not-found>
                                No hay resultados para "{{ctrl.searchText}}".
                            </md-not-found>
                        </md-autocomplete>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" ng-show="ctrl.showList">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter"> Fecha </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <md-input-container id="containerDate">
                                <label>Rango</label>
                                <md-select id="selectDate" ng-model="ctrl.State" ng-init="ctrl.State = 'Igual'" ng-change="ctrl.OnSelectChange(ctrl.State); ctrl.showErrorForm = false">
                                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Nombre}}">
                                        {{state.Nombre}}
                                    </md-option>
                                </md-select>
                            </md-input-container>
                            <md-datepicker id="datepickerStyle" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.maxDate" onkeydown="return false"></md-datepicker>
                            <md-datepicker id="datepickerStyle" ng-model="ctrl.date2" md-placeholder="Fecha" md-max-date="ctrl.maxDate" ng-show="ctrl.showSelect" onkeydown="return false"></md-datepicker>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">

                @*VENDEDORES*@
                <div ng-show="ctrl.showList" class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">Vendedores</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="querySeller" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllSeller" ng-change="ctrl.SelectAllChekboxesSellers(selectAllSeller)">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="s in ctrl.seller | filter:querySeller">
                                <md-checkbox id="itemCheckBoxValue" ng-model="s.Checked" ng-disabled="s.Disabled" ng-change="ctrl.CountSeller();"></md-checkbox>
                                <p>{{s.Clave}} | {{s.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
            </div>
        </div>

        <div id="viewer" class="row col-md-12">
            <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ErrorEnviar">
                <div class="error-message col-md-12">{{ctrl.ErrorEnviar}}</div>
            </div>
        </div>

        <div class="row" id="marginSubmit">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <md-button id="buttomReports" type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.Clave, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right">Generar reporte</md-button>
            </div>
        </div>
    </div>
</div>