
@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/informeVentasROVController.js"></script>

<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<style>
    .error-message {
        text-align: right;
        font-weight: 500;
        font-size: 16px;
    }
</style>

<div ng-controller="informeVentasROVController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">

    <div class="panel-heading" style="background:rgb(179,0,0); color:white; border-radius:20px">
        <h4> {{ctrl.titulo}} </h4>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin:10px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.nShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.nShowLists(ctrl.selectedItem.value);
                                         ctrl.GetRoutes(ctrl.selectedItem.value);
                                         ctrl.GETSeller(ctrl.selectedItem.value);
                                         ctrl.getClientes(ctrl.selectedItem.value);
                                         selectAllRoutes=false;
                                         selectAllSeller=false;
                                         selectAllSchemesCli=false;
                                         selectAllSchemesPro = false;
                                         selectAllClients=false;
                                         ctrl.ResetValues();"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución"
                                     @*md-autoselect="true"*@>
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No hay resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4" style="margin-top:20px; margin-bottom:15px; margin-right: -80px">
            <md-radio-group ng-model="Group1" ng-change="ctrl.GroupFilter1(Group1)">
                <div class="col-md-3" style="margin-left: -15px">
                    <md-radio-button class="md-primary" value="Rutas">Rutas</md-radio-button>
                </div>
                <div class="col-md-3">
                    <md-radio-button class="md-primary" value="Vendedores">Vendedores</md-radio-button>
                </div>
            </md-radio-group>
        </div>

        <div class="col-md-4" style="margin-top:10px; margin-bottom:15px; margin-right: -30px">
            <md-radio-group ng-model="Group2" ng-change="ctrl.GroupFilter2(Group2)">
                <div class="col-md-6">
                    <md-radio-button class="md-primary" value="EsquemaClientes">Esquema Clientes</md-radio-button>
                </div>
                <div class="col-md-3" style="margin-left: -20px; margin-top: 10px">
                    <md-radio-button class="md-primary" value="Clientes">Clientes</md-radio-button>
                </div>
            </md-radio-group>
        </div>

        <div class="col-md-4" layout="row" style="margin-top:6px;">
            <div class="col-md-2" style="margin-top:3px; margin-left: -10px; margin-right: 15px">
                <md-input-container>
                    <label>Rango</label>
                    <md-select ng-model="ctrl.State" ng-init="ctrl.State = 'Igual'" ng-change="ctrl.OnSelectChange(ctrl.State)" ng-disabled="true" style="margin-top: -10px">
                        <md-option ng-repeat="state in ctrl.dateState" value="{{state.Nombre}}">
                            {{state.Nombre}}
                        </md-option>
                    </md-select>
                </md-input-container>
            </div>
            <div class="col-md-4">
                <md-datepicker ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false" style="background-color:#f7f7f7 !important"></md-datepicker>
            </div>
            

