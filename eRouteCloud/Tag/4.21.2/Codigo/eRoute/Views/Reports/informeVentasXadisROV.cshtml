    <div class="row">
        @*RUTAS*@
        <div ng-show="ctrl.RoutesFilters" class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="padding-right:unset">
            <div class="panel panel-default" style="border-top-right-radius:15px; border-top-left-radius:15px; min-height: 200px /*height:500px;*/">
                <div class="panel-heading" style="background: rgb(179,0,0); color:#ffffff; font-weight: 700; border-top-right-radius:15px; border-top-left-radius:15px;">Rutas</div>
                <div class="panel-body">
                    <md-input-container class="md-block" style="margin-top: 0; margin-bottom: 0;">
                        <input type="text" ng-model="queryRoute" placeholder="Búsqueda" style="margin-left:10px; width:90%" />
                    </md-input-container>
                    <md-checkbox ng-model="selectAllRoutes" @*ng-click="ctrl.SelectAllChekboxesRoutes(selectAllRoutes)"*@ ng-change="ctrl.SelectAllChekboxesRoutes(selectAllRoutes); ctrl.getClientes();" style="margin-top: 10px; margin-left:0; margin-bottom:0">Seleccionar todos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="min-height:310px; max-height:310px; overflow-y:auto; margin-left:-14px;">
                        <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute" style="margin-bottom:-9px; margin-top:0;">
                            <md-checkbox ng-model="route.Checked" ng-disabled="route.Disabled" ng-change="ctrl.CountRoutes(); ctrl.getClientes()" style="margin-right:2%"></md-checkbox>
                            <p>{{route.Clave}} | {{route.Nombre}}</p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>
        @*VENDEDORES*@
        <div ng-show="ctrl.SellersFilters" class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="padding-right:unset">
