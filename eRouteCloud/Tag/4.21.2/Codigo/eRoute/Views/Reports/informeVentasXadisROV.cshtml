                    <md-list ng-cloak style="min-height:310px; max-height:310px; overflow-y:auto; margin-left:-14px;">
                        <md-list-item ng-repeat="s in ctrl.seller | filter:querySeller" style="margin-bottom:-9px; margin-top:0;">
                            <md-checkbox ng-model="s.Checked" ng-disabled="s.Disabled" ng-change="ctrl.CountSeller();" style="margin-right:2%"></md-checkbox>
                            <p>{{s.Clave}} | {{s.Nombre}}</p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>
        @*ESQUEMA DE CLIENTES*@
