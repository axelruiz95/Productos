                <div class="panel-body">
                    <md-input-container class="md-block" style="margin-top: 0; margin-bottom: 0;">
                        <input type="text" ng-model="querySchemesCli" placeholder="Búsqueda" style="margin-left:10px; width:90%" />
                    </md-input-container>
                    <md-checkbox ng-model="selectAllSchemesCli" ng-change="ctrl.SelectAllChekboxesSchemesCli(selectAllSchemesCli)" @*ng-change="ctrl.getAllClientes(ctrl.routes);"*@ style="margin-top: 10px; margin-left:0; margin-bottom:0">Seleccionar todos</md-checkbox>
