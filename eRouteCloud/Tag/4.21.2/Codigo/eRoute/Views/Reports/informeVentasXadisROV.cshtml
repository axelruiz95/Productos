                    </md-input-container>
                    <md-checkbox ng-model="selectAllSeller" ng-change="ctrl.SelectAllChekboxesSellers(selectAllSeller)" @*ng-change="ctrl.getAllClientes(ctrl.routes);"*@ style="margin-top: 10px; margin-left:0; margin-bottom:0">Seleccionar todos</md-checkbox>
