@{
    Layout = null;
    ViewBag.Title = "Menu";
}

<!DOCTYPE html>

<html style="background-color:#f7f7f7;">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Menu</title>
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")

    <script src="~/Views/Login/Login.js"></script>
    <script src="~/Views/Menu/js/sidebar_menu.js"></script>
    <script src="~/Views/Menu/js/sidebarapp.js"></script>
    <script src="~/Scripts/ng-map.min.js"></script>
    <script src="~/Views/Menu/js/angular.treeview.js"></script>
    <script src="~/Scripts/loading-bar.js"></script>
    <link href="~/Content/loading-bar.css" rel="stylesheet" />
    <link href="~/Views/Menu/css/menu.css" rel="stylesheet" />
    <link href="~/Views/Menu/css/sidebar.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="~/favicon.ico" type="image/ico" />

    <style>
        #loading-bar {
            pointer-events: all;
            z-index: 99999;
            border: none;
            margin: 0px;
            padding: 0px;
            width: 100%;
            height: 100%;
            top: 0px;
            left: 0px;
            cursor: wait;
            position: fixed;
            background-color: rgba(0, 0, 0, 0.6);
        }

.container {
    max-width: 100%;
    margin-left: 200px;
    padding-right: 0;
}


    </style>
</head>

<body style="padding-top:0px;position: static !important;" ng-app="menuRoute" class="bodysss">

    <nav class="navbar navbar-default navbar-fixed-top no-margin eroute-navbar">
        <div ng-controller="menu as ctrl" data-ng-init="init()">
            <div class="navbar-header fixed-brand">
                <button type="button" class="navbar-toggle collapsed pull-left" style="border-color:transparent !important;" data-toggle="collapse" id="menu-toggle">
                    <span class="fa fa-bars eroute-menubutton" style="padding-top:0px !important;" aria-hidden="true">

                    </span>
                </button>
                <div class="navbar-brand logo-collapsed">
                    <img src="~/Assets/Login/a_login_logo.png" width="70" height="35" />
                </div>
                <a href=""><span class="fa fa-sign-out pull-right eroute-menubutton logo-collapsed" title="Cerrar sesión" ng-click="ctrl.Logout()" style="padding:20px;font-size:25px; color:#E11500;" aria-hidden="true" data-toggle="collapse"></span></a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <span class="fa fa-bars eroute-menubutton" aria-hidden="true" data-toggle="collapse" id="menu-toggle-2">
                        </span>
                    </li>
                </ul>
                <div class="navbar-brand">
                    <img src="~/Assets/Login/a_login_logo.png" width="70" height="35" />
                </div>

                <a href=""><span class="fa fa-sign-out pull-right eroute-menubutton" title="Cerrar sesión" ng-click="ctrl.Logout()" style="padding:20px; font-size:25px; color:#E11500;" aria-hidden="true" data-toggle="collapse" id="menu-toggle-2"></span></a>
            </div>
        </div>
        @*<div id="loading-bar-container"></div>*@
    </nav>


    <div id="wrapper" ng-controller="menu as ctrl">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="panel-group" style="margin-top: 11px;" id="accordion" role="tablist" aria-multiselectable="true">
                <div class="panel panel-default list-title-style">
                    <div class="panel-heading list-panelheading" role="tab" id="headingOne">
                        <h4 class="panel-title">
                            <span class="fa fa-pie-chart" style="color:#E51500;"></span>
                            <a role="button" ng-click="" style="margin-left:15px;white-space:nowrap !important;" id="ReportsWeb" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Reportes WEB</a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne" ng-init="ctrl.test()">
                        <div class="panel-body" style="">
                            <md-input-container md-no-float class="md-block" style="margin:0;">
                                <input ng-model="query" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                            </md-input-container>
                            <ul class="list-group" style="overflow-y:auto;height:350px;">
                                <li class="list-group-item list-style" ng-cloak ng-repeat="name in ctrl.GetList | filter:query">
                                    <a href="~/Reports/Index?VAVClave={{name.VAVClave}}">{{name.Descripcion}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>


                <div class="panel panel-default list-title-style">
                    <div class="panel-heading list-panelheading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <span class="fa fa-map" style="color:#E51500;"></span>
                            <a class="collapsed" id="MapsWeb" style="margin-left: 15px;" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Mapas WEB
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <md-input-container md-no-float class="md-block" style="margin:0;">
                                <input ng-model="queryMaps" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                            </md-input-container>
                            <ul class="list-group" ng-repeat="maps in responseMapList | filter:queryMaps">
                                <li class="list-group-item list-style">
                                    <a href="~/Maps?vavclave={{maps.vavclave}}">{{maps.Descripcion}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
             
            <!-- Page Content -->
            @*<div id="page-content-wrapper">
                    <div class="container-fluid xyz">
                        <div class="row">
                            <div class="col-lg-12">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>*@
        </div>
    </div>

    <div class="container container-pos" id="container-wrapper"> 
        @*<div class="container-pos" style="margin-left:160px">*@
            @RenderBody()
        </div>


        <script src="~/Views/Menu/js/Menu.js"></script>
        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/bootstrap")
        <script src="~/Views/Menu/js/sidebar_menu.js"></script>
</body>
</html>
