@using eRoute.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Menu/Index.cshtml";
    string sPermiso = ViewBag.Permiso;
}
<style>


</style>

<div class="container valores margen-tabla" ng-controller="VendedorCtrl" ng-init="AsignarPermisoVendedor('@ViewBag.Permiso')">
    <div class="row">
        <div class="col-md-12 header">
            <h3 class="titulo-altura ng-binding">{{translation.ERMVENESC_NGeneral}}</h3>

        </div>
    </div>
    <!--Crear-->
    <div class="row header-valores">
        <div class="col-md-2">
            @{ if (sPermiso.Contains("C"))
                {
                    @Html.ImageActionLink("../Content/images/crear.png", Url.Action("Create", new { Permiso = ViewBag.Permiso }), "{{translation.BTCrear}}")
                }
            }
        </div>

        <!--Actualizar-->
        <div class="col-md-2">

            @Html.ImageActionLink("../Content/images/actualizar.png", Url.Action("Index", new { Permiso = ViewBag.Permiso }), "{{translation.BTActualizar}}")


        </div>

        <!--Buscar-->
        <div class="col-md-3">
            <form>
                <div class="input-group">
                    <span class="input-group-addon"><img width="16" height="16" src="../Content/images/buscar.png" /></span>
                    <input type="text" placeholder="{{translation.BTBuscar}}" class="form-control" ng-model="search" />
                </div>
            </form>
        </div>
        <!--Paginas-->
        <div class="col-md-5">
            <dir-pagination-controls max-size="4"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
    </div>

    <div class="row header-valores">
        <div class="col-md-12">
            <table cellpadding="12" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <!--Encabezados-->
                        <th style="width:10%"></th>
                        <th class="cursor-pointer" ng-click="sort('VENNombre')"><b>{{translation.VENNombre}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='VENNombre'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('XTipo')"><b>{{translation.XTipo}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='XTipo'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('VENLimiteDescuento')"><b>{{translation.VENLimiteDescuento}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='VENLimiteDescuento'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('XEstado')"><b>{{translation.XEstado}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='XEstado'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('XBaja')"><b>{{translation.XBaja}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='XBaja'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('XUsuario')"><b>{{translation.XUsuario}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='XUsuario'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('VENTerminalClave')"><b>{{translation.VENTerminalClave}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='VENTerminalClave'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('VENMCNClave')"><b>{{translation.VENMCNClave}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='VENMCNClave'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('XCEDI')"><b>{{translation.XCEDI}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='XCEDI'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="valter in cVendedores|orderBy:sortKey:reverse|filter:search|itemsPerPage:tamPag">
                        <!--Editar-->
                        <td>
                            @{  if (sPermiso.Contains("U"))
                                {
                                    @Html.ImageAction("../Content/images/editar.png", HttpUtility.UrlDecode(Url.Action("Edit", "Vendedores", new { Placa = "{{valter.Placa}}", Permiso = ViewBag.Permiso })), "{{translation.BTModificar}}")
                                }

                                else if (sPermiso.Contains("R"))
                                {

                                    @Html.ImageAction("../Content/images/consultar.png", HttpUtility.UrlDecode(Url.Action("Details", "Vendedores", new { Placa = "{{valter.Placa}}", Permiso = ViewBag.Permiso })), "{{translation.btConsultar}}")


                                }

                            }

                            &nbsp &nbsp
                            @{  if (sPermiso.Contains("D"))
                                {
                                    @Html.ImageAction("../Content/images/eliminar.png", HttpUtility.UrlDecode(Url.Action("Edit", "Vendedores", new { TipoCodigo = "{{valter.TipoC}}", Permiso = ViewBag.Permiso })), "{{translation.XEliminar}}")




                                }

                            }

                        </td>
                        <td>{{valter.Nombre}}</td>
                        <td>{{valter.Tipo}}</td>
                        <td>{{valter.LimiteDescuento}}</td>
                        <td>{{valter.TipoEstado}}</td>
                        <td><input type="checkbox" name="Baja" ng-model="valter.Baja" ng-checked="valter.Baja" ng-disabled="true"></td>
                        <td>{{valter.Usuario}}</td>
                        <td>{{valter.TerminalClave}}</td>
                        <td>{{valter.MCNClave}}</td>
                        <td>{{valter.Clave}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
