@using eRoute.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Menu/Index.cshtml";
}
<style>
    @@media (min-width: 992px) {
        .col-md-1 {
            width: 9.333333%;
        }
    }

    @@media (min-width: 992px) {
        .col-md-2 {
            width: 15.666667%;
        }
    }
</style>

<div class="container valores margen-tabla" ng-controller="cargasController" ng-init="AsignarPermisoCargas('@ViewBag.Permiso')">
    <div class="row">
        <div class="col-md-12 header">
            <h3 class="titulo-altura">{{translation.XCargas}}</h3>
            @{string sPermiso = ViewBag.Permiso;}
        </div>
    </div>
    <div class="row header-valores">
        <div class="col-md-1">
            @{  if (sPermiso.Contains("C"))
                {
                    @Html.ImageActionLink("../Content/images/crear.png", Url.Action("Create", new { Permiso = ViewBag.Permiso }), "{{translation.BTCrear}}")
                }
            }
        </div>
        <div class="col-md-2">
            @Html.ImageActionLink("../Content/images/actualizar.png", Url.Action("Index", new { Permiso = ViewBag.Permiso }), "{{translation.BTActualizar}}")
        </div>
        <div class="col-md-3">
            <form>
                <div class="input-group">
                    <span class="input-group-addon"><img width="16" height="16" src="../Content/images/buscar.png" /></span>
                    <input type="text" placeholder="{{translation.BTBuscar}}" class="form-control" ng-model="search" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <dir-pagination-controls max-size="9"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table cellpadding="12" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:5%"></th>
                        <th class="cursor-pointer" ng-click="sort('Folio')"><b>{{translation.CFolio}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Folio'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('DiaTrabajo')"><b>{{translation.TRPDiaClave}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='DiaTrabajo'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('CEDIS')"><b>{{translation.TERAlmacenID}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='CEDIS'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('Vendedor')"><b>{{translation.XVendedor}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Vendedor'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('Fase')"><b>{{translation.TERTipoFase}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Fase'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('Sugerida')"><b>{{translation.XSugerida}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Sugerida'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="c in CargasList|orderBy:sortKey:reverse|filter:search|itemsPerPage:tamPag">
                        <td>
                            @{  if (sPermiso.Contains("U"))
                                {
                                    @Html.ImageAction("../Content/images/editar.png", HttpUtility.UrlDecode(Url.Action("Edit", "Cargas", new { Folio = "{{c.Folio}}", Permiso = ViewBag.Permiso })), "{{translation.BTModificar}}")
                                }
                                else if (sPermiso.Contains("R"))
                                {
                                    @Html.ImageAction("../Content/images/consultar.png", HttpUtility.UrlDecode(Url.Action("Details", "Cargas", new { Folio = "{{c.Folio}}", Permiso = ViewBag.Permiso })), "{{translation.btConsultar}}")
                                }
                            }
                        </td>
                        <td>{{c.Folio}}</td>
                        <td>{{c.DiaClave}}</td>
                        <td>{{c.Almacen}}</td>
                        <td>{{c.Vendedor}}</td>
                        <td>{{c.TipoFase}}</td>
                        <td>{{c.Sugerida}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    @{ Html.RenderPartial("MsgBox/YesNoMsgBox"); }
    @{ Html.RenderPartial("MsgBox/MsgBox"); }
</div>



