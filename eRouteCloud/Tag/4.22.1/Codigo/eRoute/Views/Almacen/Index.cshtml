@using eRoute.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Menu/Index.cshtml";
}
<style>
    @@media (min-width: 992px) {
        .col-md-1 {
            width: 9.333333%;
        }
    }

    @@media (min-width: 992px) {
        .col-md-2 {
            width: 15.666667%;
        }
    }
</style>

<div class="container valores margen-tabla" ng-controller="almacenCtrl" ng-init="AsignarPermisoAlmacen('@ViewBag.Permiso')">
    <div class="row">

        <div class="col-md-12 header">
            <h3 class="titulo-altura">{{translation.XAlmacenes}}</h3>

            @{string sPermiso = ViewBag.Permiso;}
        </div>
    </div>
    <div class="row header-valores">
        <div class="col-md-1">
            @{  if (sPermiso.Contains("C"))
                {
                    @Html.ImageActionLink("../Content/images/crear.png", Url.Action("Create", new { Permiso = ViewBag.Permiso }), "{{translation.BTCrear}}")
                }
            }
        </div>
        <div class="col-md-2">
            @Html.ImageActionLink("../Content/images/actualizar.png", Url.Action("Index", new { Permiso = ViewBag.Permiso }), "{{translation.BTActualizar}}")
        </div>
        <div class="col-md-3">
            <form>
                <div class="input-group">
                    <span class="input-group-addon"><img width="16" height="16" src="/Content/images/buscar.png" /></span>
                    <input type="text" placeholder="{{translation.BTBuscar}}" class="form-control" ng-model="search" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <dir-pagination-controls max-size="8"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table cellpadding="12" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th style="width:8%"></th>
                        <th class="cursor-pointer" ng-click="sort('Nombre')"><b>{{translation.ALMNombre}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Nombre'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('Tipo')"><b>{{translation.ALMTipo}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Tipo'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('TipoEstado')"><b>{{translation.ALMTipoEstado}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='TipoEstado'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('Clave')"><b>{{translation.CTIALMClave}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='Clave'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                        <th class="cursor-pointer" ng-click="sort('AlmacenPadreId')"><b>{{translation.ALMAlmacenPadreID}}</b>  <span class="glyphicon sort-icon" ng-show="sortKey=='AlmacenPadreId'" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span></th>
                    </tr>
                </thead>
                <tbody>
                    <tr dir-paginate="alm in cAlmacenesList|orderBy:sortKey:reverse|filter:search|itemsPerPage:tamPag">
                        <td>
                            @{  if (sPermiso.Contains("U"))
                                {
                                    @Html.ImageAction("../Content/images/editar.png", HttpUtility.UrlDecode(Url.Action("Edit", "Almacen", new { USUId = "{{alm.AlmacenID}}", Permiso = ViewBag.Permiso })), "{{translation.BTModificar}}")
                                }
                                else if (sPermiso.Contains("R"))
                                {
                                    @Html.ImageAction("../Content/images/consultar.png", HttpUtility.UrlDecode(Url.Action("Details", "Almacen", new { USUId = "{{alm.AlmacenID}}", Permiso = ViewBag.Permiso })), "{{translation.btConsultar}}")
                                }
                            }

                            &nbsp &nbsp
                            @{ /* if (sPermiso.Contains("D"))
                  {
                      @Html.ImageButton("/Content/images/eliminar.png", "ValidarEliminarAlmacen(alm.AlmacenID)", "{{translation.BTEliminar}}")
                  }
                  else
                  {

                      @Html.ImageAction("/Content/images/consultar.png", HttpUtility.UrlDecode(Url.Action("Details", "Almacen", new { USUId = "{{alm.AlmacenID}}", Permiso = ViewBag.Permiso })), "{{translation.btConsultar}}")

                  }*/

                            }


                        </td>
                        <td>{{alm.Nombre}}</td>
                        <td>{{alm.Tipo}}</td>
                        <td>{{alm.TipoEstado}}</td>
                        <td>{{alm.Clave}}</td>
                        <td>{{alm.AlmacenPadreId}}</td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    @{ Html.RenderPartial("MsgBox/YesNoMsgBox"); }
    @{ Html.RenderPartial("MsgBox/MsgBox"); }
</div>