
@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/vendedorClienteModelListPreBYDController.js"></script>

<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<style>
    .error-message {
        text-align: right;
        font-weight: 500;
        font-size: 16px;
    }
</style>

<div ng-controller="vendedorClienteModelListPreBYDController as ctrl">

    <div class="panel-heading" style="background-color:#E51500; color:white; border-radius:12px">
        <h4>Vendedor Cliente Modelo Lista de Precios</h4>
    </div>

    <div class="row" style="margin-top: 30px">
        <div class="col-lg-12">
            <md-checkbox style="margin-left:4px; margin-bottom:30px;" ng-model="CentroDistribucion" ng-change="ctrl.mostrarCEDI(CentroDistribucion)">Centro de Distribución</md-checkbox>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin: -20px 0 0 0;" ng-disabled="!CentroDistribucion"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.date1 = undefined;
                                         ctrl.date2 = undefined;
                                         ctrl.ReportType=false;
                                         ctrl.showErrorForm = false" ;
                                     @*ctrl.nShowLists(ctrl.selectedItem.value);*@
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución"
                                     md-autoselect="true">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No hay resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top:50px">
        <div class="col-md-7" layout="row" style="margin-top:2px;">
            <div class="col-md-2" style="margin-top:3px">
                <md-input-container>
                    <label>Rango</label>
                    <md-select ng-model="ctrl.State" ng-init="ctrl.State = 'Igual'" ng-change="ctrl.OnSelectChange(ctrl.State)" style="margin-top: -10px">
                        <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                            {{state.Descripcion}}
                        </md-option>
                    </md-select>
                </md-input-container>
            </div>
            <div class="col-md-4">
                <md-datepicker ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false" style="background-color:#f7f7f7 !important"></md-datepicker>
            </div>
            <div class="col-md-4">
                <md-datepicker ng-model="ctrl.date2" md-placeholder="Fecha" md-min-date="ctrl.date1" md-max-date="ctrl.minDate" ng-show="ctrl.showSelect" onkeydown="return false" style="background-color:#f7f7f7 !important"></md-datepicker>
            </div>
        </div>

        <div class="col-md-5" layout="row" style="margin-top:2px;">
            <div id="viewer" class="row col-md-12">
                <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ErrorEnviar">
                    <div class="error-message col-md-12">{{ctrl.ErrorEnviar}}</div>
                </div>
            </div>

            <div class="row" style="margin-top:2px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.dateState, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
                </div>
            </div>
        </div>
    </div>
</div>