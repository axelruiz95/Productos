
@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/libroRutaVitereController.js"></script>

<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<style>
    .error-message {
        text-align: right;
        font-weight: 500;
        font-size: 16px;
    }
</style>

<div ng-controller="libroRutaVitereController as ctrl">
    <div class="panel-heading" style="background-color: rgb(179,0,0); color:white; border-radius:20px">
        <h4>Libro de Ruta (Vitere)</h4>
    </div>
    <div class="row" style="margin-top: 30px">
        <div class="col-lg-12">
            <md-checkbox style="margin-left:4px; margin-bottom:30px;" ng-model="CentroDistribucion" ng-change="ctrl.mostrarCEDI(CentroDistribucion)">Centro de Distribución</md-checkbox>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin: -20px 0 0 0;" ng-disabled="!CentroDistribucion"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.nShowLists(ctrl.selectedItem.value);
                                         ctrl.GetRoutes(ctrl.selectedItem.value);
                                         queryRoute = '';
                                         inactR=false;
                                         ctrl.date1 = undefined;
                                         ctrl.ReportType=false;
                                         ctrl.showErrorForm = false"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución"
                                     md-autoselect="true">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No se han encontrado resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top:30px; margin-left:0px;">
        @*<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Rutas
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryRoute" type="text" style="width:90%; margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-checkbox style="margin-top: 10px; margin-left:0; margin-bottom:0" ng-model="selectAllRoutes" ng-click="ctrl.SelectAllChekboxesRoutes(selectAllRoutes)">Seleccionar todos</md-checkbox>
                <md-checkbox style="margin-left:4px;" ng-model="inactR" ng-click="ctrl.inactivosClic(ctrl.selectedItem.value)" ng-change="selectAllRoutes = false">Mostrar Inactivos</md-checkbox>
                <md-divider></md-divider>
                <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-14px;">
                    <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute" style="margin-bottom:-9px; margin-top:0;">
                        <md-checkbox ng-disabled="route.Disabled" ng-model="route.Checked" ng-change="ctrl.CountRoutes();" style="margin-right:2%"></md-checkbox>
                        <p> {{ route.RUTClave }} | {{route.Descripcion}} </p>
                    </md-list-item>
                </md-list>
            </div>
        </div>*@


        <div class="col-lg-4 col-md-3 col-sm-4 col-xs-6" style="padding-right:unset; min-width: 370px">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color: rgb(179,0,0); color:white; border-top-right-radius:15px; border-top-left-radius:15px; font-size:15px;">Rutas</div>
                <div class="panel-body">
                    <md-input-container class="md-block" style="margin-top: 0; margin-bottom: 0;">
                        <input type="text" ng-model="queryRoute" placeholder="Búsqueda" style="margin-left:10px; width:90%" />
                    </md-input-container>
                    <md-checkbox style="margin-left:4px;"  ng-model="selectAll" ng-click="ctrl.SelectAllChekboxesRoutes(selectAll)" ">Seleccionar todos</md-checkbox>
                    <md-checkbox style="margin-left:4px;" ng-model="inactR" ng-click="ctrl.inactivosClic(ctrl.selectedItem.value)" ng-change="selectAllRoutes = false">Mostrar Inactivos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="max-height:310px; overflow-y:auto; margin-left:-14px;">
                        <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute">
                            <md-checkbox ng-disabled="route.Disabled" ng-model="route.Checked" "></md-checkbox>
                            <p> {{ route.RUTClave }} | {{route.Descripcion}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>


    </div>

    <div class="row" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Rango</label>
                <md-select ng-model="ctrl.State" ng-init="ctrl.State='Igual'" ng-disabled="true">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style="background-color: #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.dateState, ctrl.routes, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
        </div>
    </div>

    <div id="viewer" class="row col-md-10">
        <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ErrorEnviar">
            <div class="error-message col-md-11">{{ctrl.ErrorEnviar}}</div>
        </div>
    </div>
</div>