@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/R265ListadoDeClientesGenericoController.js"></script>
<link href="~/Assets/CSS/StyleReports.css" rel="stylesheet" />

<div ng-controller="R265ListadoDeClientesGenericoController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default" style="background-color:#B40002; border-radius:15px;">
                <div class="panel-heading" style="background-color:#B40002; color:white; border-radius:15px;">
                    <h4> {{ctrl.titulo}} </h4>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Centro De Distribución
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="queryCedi" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-checkbox ng-model="selectAllCedis" ng-click="ctrl.SelectAllCheckboxesCedis(selectAllCedis);" id="checkBoxSelectAll">Seleccionar todos</md-checkbox>
                    <md-divider id="lineDivider"></md-divider>
                    <md-list id="listCheckBox">
                        <md-list-item id="itemListCheckBox" ng-repeat="cedi in ctrl.cedis | filter:queryCedi">
                            <md-checkbox id="itemCheckBoxValue" ng-disabled="cedi.Disabled" ng-model="cedi.Checked" ng-change="ctrl.CountCedis();"></md-checkbox>
                            <p>{{cedi.Nombre}}</p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" ng-show="ctrl.showList">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Rutas
                </div>
                <div class="panel-body Panel-Body-Filter">
                    <md-input-container md-no-float class="md-block" id="searchFilterMargin">
                        <input ng-model="queryRoute" type="text" placeholder="Búsqueda" id="searchFilterText">
                    </md-input-container>
                    <md-checkbox ng-model="selectAll" ng-click="ctrl.SelectAllCheckboxesRoutes(selectAll);" id="checkBoxSelectAll">Seleccionar todos</md-checkbox>
                    <md-divider id="lineDivider"></md-divider>
                    <md-list id="listCheckBox">
                        <md-list-item id="itemListCheckBox" ng-repeat="route in ctrl.routes | filter:queryRoute">
                            <md-checkbox id="itemCheckBoxValue" ng-disabled="route.Disabled" ng-model="route.Checked" ng-change="ctrl.CountRoutes();"></md-checkbox>
                            <p>{{route.Nombre}}</p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" ng-show="ctrl.showList">
            <div class="panel panel-default Panel-Default-Filter">
                <div class="panel-heading Panel-Filter">
                    Incluir Clientes Inactivos
                </div>
                <div class="panel-body">
                    <md-switch ng-model="ctrl.switch" aria-label="Incluir Clientes Inactivos" ng-change="ctrl.onChange(ctrl.switch)">
                        Incluir Clientes Inactivos
                    </md-switch>
                </div>
            </div>
        </div>
    </div>

    <div id="viewer" class="row" ng-show="ctrl.showList">
        <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ShowError">
            <div class="error-message col-md-12">{{ctrl.ShowError}}</div>
        </div>
    </div>

    <div class="row" ng-show="ctrl.showList" ng-disabled="ctrl.showList">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" id="buttomReports">Generar reporte</md-button>
        </div>
    </div>
</div>