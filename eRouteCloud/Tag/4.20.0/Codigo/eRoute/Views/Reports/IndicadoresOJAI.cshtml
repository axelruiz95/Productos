@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}
<script src="~/Controllers/js/controllers/indicadoresOJAIController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<div ng-controller="indicadoresOJAIController as ctrl">
    <h4> Reporte de Indicadores </h4>
    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin:20px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.GetSellers(ctrl.selectedItem.value); ctrl.nShowLists(ctrl.selectedItem.value); ctrl.GetRoutes(ctrl.selectedItem.value)"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No se han encontrado resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                        <div ng-messages="searchForm.autocompleteField.$error" ng-if="searchForm.autocompleteField.$touched">
                            <div ng-message="required">You <b>must</b> have a favorite state.</div>
                        </div>
                    </md-autocomplete>
                </form>
            </div>
        </div>                
    </div>

    <!--Controles para mostrar y seleccionar rutas-->
    <div class="row" style="margin-top:30px;margin-left:0px;" ng-show="ctrl.showList">
        <div class="row">
            <div class="col-lg-12">
                <md-checkbox style="margin-left:4px; margin-bottom:30px;" ng-model="ctrl.ReportType">Detallado</md-checkbox>
            </div>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
            Rutas
            <div class="">
                <md-input-container md-no-float class="md-block">
                    <input ng-model="queryRoute" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                </md-input-container>
                <md-list ng-cloak style="max-height:350px;overflow-y:auto;">
                    <md-radio-group ng-model="ctrl.RUTClave" ng-repeat="route in ctrl.routes | filter:queryRoute" ng-change="ctrl.ClearAllSellersCheckBoxes()">
                        <md-radio-button ng-value="route.RUTClave" class="md-primary" ng-cloak>
                            {{ route.RUTClave }} | {{route.Descripcion}}
                        </md-radio-button>
                    </md-radio-group>
                </md-list>
            </div>
        </div>              
    </div>
    
    <!--Filtro de fecha-->
    <div class="row" ng-show="ctrl.showList" style="margin-top:20px;">
        @*<div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-checkbox style="margin-left:4px; margin-bottom:30px;" ng-model="ctrl.ReportType">Detallado</md-checkbox>
        </div>*@
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Rango</label>
                <md-select ng-model="ctrl.State" ng-init="ctrl.State='Igual'" ng-disabled="true">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style=" background-color #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
        </div>
    </div>

    <div class="row" ng-show="ctrl.showList" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Objetivo Venta Mensual Cajas</label>
                <input style="max-width:100%" type="number" class="form-control" data-modal="modal" ng-model="ctrl.ObjetivoVentaMensualCajas" name="ObjetivoVentaMensualCajas" ng-required="true" min="0" />
                @*<md-select ng-model="ctrl.State" ng-init="ctrl.State='Igual'" ng-disabled="true">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>*@
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Objetivo Visitas Efectivas</label>
                <input style="max-width:100%" type="number" class="form-control" data-modal="modal" ng-model="ctrl.ObjetivoVisitasEfectivas" name="ObjetivoVisitasEfectivas" ng-required="true" min="0" />
                @*<md-select ng-model="ctrl.State" ng-init="ctrl.State='Igual'" ng-disabled="true">
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option>
                </md-select>*@
            </md-input-container>
        </div>
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.dateState, ctrl.esquemas, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
        </div>
    </div>

    <div id="viewer">

    </div>
</div>