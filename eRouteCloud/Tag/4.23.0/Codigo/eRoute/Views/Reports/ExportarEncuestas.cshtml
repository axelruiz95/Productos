@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}
<script src="~/Controllers/js/controllers/exportarEncuestasAplicadasController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />

<div ng-controller="exportarEncuestasAplicadasController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <h4>{{ctrl.titulo}}</h4>
    <div class="">
        <div class="row" style="margin-top:30px; margin-left:0px;">
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
                <md-input-container style="margin-top:5px; width:150px;">
                    <label>Rango</label>
                    <md-select ng-model="ctrl.State" ng-change="ctrl.OnSelectChange(ctrl.State)">
                        <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                            {{state.Descripcion}}
                        </md-option>
                    </md-select>
                </md-input-container>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
                <md-datepicker style="background-color: #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
                <md-datepicker ng-show="ctrl.showSelect" style="background-color: #f7f7f7 !important;" ng-model="ctrl.date2" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
            </div>
        </div>
    </div>

    <div class="">
        <div class="row" style="margin-top:30px; margin-left:0px;" ng-init="">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 list-margin">
                Encuestas
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryEncuesta" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-list ng-cloak style="max-height:350px;overflow-y:auto;">
                        <md-radio-group ng-model="ctrl.CENClave" ng-repeat="encuesta in ctrl.encuestas | filter:queryEncuesta">
                            <md-radio-button ng-value="encuesta.CENClave" class="md-primary" ng-cloak style="width:100%">
                                {{ encuesta.CENClave }} | {{encuesta.Descripcion}}
                            </md-radio-button>
                        </md-radio-group>
                    </md-list>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 list-margin" ng-init="GetCediss()">
                Centro de Distribución
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryCedis" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-checkbox style="margin-left:4px;" ng-disabled="CedissSelectallCheckBox" ng-model="selectAlls" ng-click="ctrl.SelectAllChekboxesCediss(selectAlls)" ng-change="ctrl.getAllRoutes(ctrl.Cedis, true)">Seleccionar todos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                        <md-list-item ng-repeat="cedis in ctrl.cediss | filter:queryCedis">
                            <md-checkbox ng-disabled="cedis.Disabled" ng-model="cedis.Checked" ng-change="ctrl.getAllRoutes(ctrl.Cedis, true)"></md-checkbox>
                            <p> {{ cedis.value }} | {{cedis.display}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 list-margin">
                Rutas
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryRoute" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-checkbox style="margin-left:4px;" ng-disabled="RoutesSelectallCheckBox" ng-model="selectAll" ng-click="ctrl.SelectAllChekboxesRoutes(selectAll)">Seleccionar todos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                        <md-list-item ng-repeat="route in ctrl.routes | filter:queryRoute">
                            <md-checkbox ng-disabled="route.Disabled" ng-model="route.Checked" ng-change=""></md-checkbox>
                            <p> {{ route.RUTClave }} | {{route.Descripcion}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:20px;margin-left:0px;">
            <div>
                <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem, ctrl.dateState, ctrl.routes, ctrl.CENClave, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-left" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
            </div>
        </div>
    </div>

</div>