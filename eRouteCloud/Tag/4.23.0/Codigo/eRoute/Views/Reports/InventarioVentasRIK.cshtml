
@{
    ViewBag.Title = "Toma de Inventario y Ventas";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/inventarioVentasRIKController.js"></script>

<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />

<style>
    .listdemoListControls md-divider {
        margin-top: 0;
        margin-bottom: 0;
    }

    .listdemoListControls md-list {
        padding-top: 0;
    }

    .listdemoListControls md-list-item > p,
    .listdemoListControls md-list-item > ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > p,
    .listdemoListControls md-list-item ._md-list-item-inner > ._md-list-item-inner > p {
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .datepickerdemoBasicUsage {
    }

        .datepickerdemoBasicUsage md-content {
            padding-bottom: 200px;
        }

        .datepickerdemoBasicUsage .validation-messages {
            font-size: 12px;
            color: #dd2c00;
            margin: 10px 0 0 25px;
        }
</style>

<div ng-controller="inventarioVentasRIKController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <h4> {{ctrl.titulo}} </h4>
    <div class="row" style="margin-top:20px;">
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
            <md-input-container style="margin-top:5px; width:150px;">
                <label>Rango</label>
                <md-select ng-model="ctrl.State" ng-model-options="{trackBy: '$value.VAVClave'}"> @*ng-change="ctrl.OnSelectChange(ctrl.State)">*@
                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Descripcion}}">
                        {{state.Descripcion}}
                    </md-option> 
                </md-select>
            </md-input-container>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-4">
            <md-datepicker style=" background-color #f7f7f7 !important;" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false" ng-change="ctrl.nShowLists(1)"></md-datepicker>
        </div>
    </div>

    <div class="col-lg-10 col">
        <div class="row" style="margin-top:30px; margin-left:0px;">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
                Rutas
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryRoute" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-list ng-cloak style="max-height:350px;overflow-y:auto;">
                        <md-radio-group ng-model="ctrl.RUTClave" ng-repeat="route in ctrl.routes | filter:queryRoute" ng-change="ctrl.GetClients(ctrl.RUTClave)">
                            <md-radio-button ng-value="route.RUTClave" class="md-primary" ng-cloak>
                                {{ route.RUTClave }} | {{route.Descripcion}}
                            </md-radio-button>
                        </md-radio-group>
                    </md-list>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 list-margin">
                Clientes
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryClients" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                        <md-list-item ng-repeat="client in ctrl.clients | filter:queryClients">
                            <md-checkbox ng-disabled="client.Disabled" ng-model="client.Checked" ng-change=""></md-checkbox>
                            <p> {{ client.Clave }} | {{client.RazonSocial}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>        

        <div class="row" ng-show="ctrl.showList" style="margin-top:20px;margin-left:0px;">
            <div>
                <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.RUTClave, ctrl.clients,ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-left" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
            </div>
        </div>
    </div>
</div>