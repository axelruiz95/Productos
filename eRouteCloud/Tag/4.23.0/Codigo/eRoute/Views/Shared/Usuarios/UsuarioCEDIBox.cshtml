<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        .scroll-CEDI {
            width: 100%;
            height: 300px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div id="CentroBox" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- dialog header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" id="lblMsgTitulo"></h2>
                </div>
                <!-- dialog body -->
                <div class="modal-body">
                    <form role="form">
                        <div class="container">
                            <div class="form-group">
                                <label id="lblMsgMensaje" class="control-label text-label"></label>
                                <div class="scroll-CEDI">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr id="Header-table">
                                                <td></td>
                                                <td>{{translation.ALMClave}}</td>
                                                <td>{{translation.ALMNombre}}</td>
                                                <td>{{translation.ALMTelefono}}</td>
                                                <td>{{translation.ALMCodigoBarras}}</td>
                                                <td>{{translation.ALMDomicilio}}</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="t in centroDist">
                                                <td><input type="checkbox" ng-model="Clave.$index" name="{{'Clave' + $index }}" ng-checked="{{t.Existe}}" ng-false-value="'NO'" ng-true-value="'YES'" ng-click="addCentro(t.Clave, Clave.$index, t.Nombre, t.AlmacenID)"></td>
                                                <td>{{t.Clave}}</td>
                                                <td>{{t.Nombre}}</td>
                                                <td>{{t.Telefono}}</td>
                                                <td>{{t.CodigoBarras}}</td>
                                                <td>{{t.Domicilio}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- dialog buttons -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{translation.BTAceptar}}</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
