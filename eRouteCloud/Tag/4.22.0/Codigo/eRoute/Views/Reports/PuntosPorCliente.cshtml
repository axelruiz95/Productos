@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/puntosPorClienteController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<div ng-controller="puntosPorClienteController as ctrl">
    <div>
        <h4>Reporte Saldo de Puntos por Cliente </h4>
        <div class="row">
            <div class="col-lg-12">
                <div layout="column" ng-cloak>
                    <form ng-submit="$event.preventDefault()" name="searchForm">
                        <md-autocomplete flex required style="width:290px;margin:20px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                         md-input-name="autocompleteField"
                                         md-no-cache="ctrl.noCache"
                                         md-selected-item="ctrl.selectedItem"
                                         md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                         md-search-text="ctrl.searchText"
                                         md-selected-item-change="ctrl.nShowLists(ctrl.selectedItem.value); ctrl.GetClients(ctrl.selectedItem.value)"
                                         md-items="item in ctrl.querySearch(ctrl.searchText)"
                                         md-item-text="item.display"
                                         md-min-length="0"
                                         placeholder="Seleccionar centro de distribución">
                            <md-item-template>
                                <span md-highlight-text="ctrl.searchText">{{item.display}}</span>
                            </md-item-template>
                            <md-not-found>
                                No se han encontrado resultados para "{{ctrl.searchText}}".
                            </md-not-found>
                            <div ng-messages="searchForm.autocompleteField.$error" ng-if="searchForm.autocompleteField.$touched">
                                <div ng-message="required">You <b>must</b> have a favorite state.</div>
                            </div>
                        </md-autocomplete>
                    </form>
                </div>
            </div>
        </div>

        <div class="row" ng-show="ctrl.showList" style="margin-top:30px; margin-left:0px;">
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 list-margin">
                Clientes
                <div class="">
                    <md-input-container md-no-float class="md-block">
                        <input ng-model="queryClients" type="text" style="width:90%;margin-left:10px;" placeholder="Búsqueda">
                    </md-input-container>
                    <md-checkbox style="margin-left:4px;" ng-model="selectAllClients" ng-click="ctrl.SelectAllChekboxesClients(selectAllClients)">Seleccionar todos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="max-height:310px;overflow-y:auto;margin-left:-16px;">
                        <md-list-item ng-repeat="clients in ctrl.ListClients | filter:queryClients">
                            <md-checkbox ng-disabled="clients.Disabled" ng-model="clients.Checked" ng-change=""></md-checkbox>
                            <p> {{clients.RazonSocial}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>

        <div class="row" ng-show="ctrl.showList" style="margin-top:30px; margin-left:0px;">
            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
                <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.ListClients, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-left" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
            </div>
        </div>
    </div>
</div>


