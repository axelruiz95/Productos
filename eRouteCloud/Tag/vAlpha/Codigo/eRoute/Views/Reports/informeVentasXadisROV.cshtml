
@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/informeVentasROVController.js"></script>

<script src="~/Views/Menu/js/angular.treeview.js"></script>
<link href="~/Views/Menu/css/angular.treeview.css" rel="stylesheet" />
<link href="~/Assets/CSS/StyleReports.css" rel="stylesheet" />

<div ng-controller="informeVentasROVController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">

    <div class="panel-heading Header-Label"> <h4> {{ctrl.titulo}} </h4> </div>
    
    <div class="row" id="row-margin">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter"> Centro De Distribución </div>
                    <div class="panel-body">
                        <md-autocomplete flex required ng-disabled="ctrl.isDisabled"
                                         md-input-name="autocompleteField"
                                         md-no-cache="ctrl.noCache"
                                         md-selected-item="ctrl.selectedItem"
                                         md-search-text-change="ctrl.nShowLists(ctrl.selectedItem.Clave)"
                                         md-search-text="ctrl.searchText"
                                         md-selected-item-change="ctrl.nShowLists(ctrl.selectedItem.Clave);
                                         ctrl.GetRoutes(ctrl.selectedItem.Clave);
                                         ctrl.GETSeller(ctrl.selectedItem.Clave);
                                         ctrl.GetEsquemas(ctrl.selectedItem.Clave);
                                         ctrl.getClientes(ctrl.selectedItem.Clave);
                                         selectAllRoutes=false;
                                         selectAllSeller=false;
                                         selectAllSchemesCli=false;
                                         selectAllSchemesPro = false;
                                         selectAllClients=false;
                                         ctrl.ResetValues();"
                                         md-items="item in ctrl.querySearch(ctrl.searchText)"
                                         md-item-text="item.Nombre"
                                         md-min-length="0"
                                         placeholder="Seleccionar centro de distribución"
                                         md-autoselect="true">
                            <md-item-template>
                                <span md-highlight-text="ctrl.searchText" md-highlight-flags="^i">{{item.Nombre}}</span>
                            </md-item-template>
                            <md-not-found>
                                No hay resultados para "{{ctrl.searchText}}".
                            </md-not-found>
                        </md-autocomplete>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter"> Fecha </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <md-input-container id="containerDate">
                                <label>Rango</label>
                                <md-select id="selectDate" ng-model="ctrl.State" ng-init="ctrl.State = 'Igual'" ng-disabled="true">
                                    <md-option ng-repeat="state in ctrl.dateState" value="{{state.Nombre}}">
                                        {{state.Nombre}}
                                    </md-option>
                                </md-select>
                            </md-input-container>
                            <md-datepicker id="datepickerStyle" ng-model="ctrl.date1" md-placeholder="Fecha" md-max-date="ctrl.minDate" onkeydown="return false"></md-datepicker>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="col-md-12">
                    <md-radio-group layout="row" ng-model="Group1" ng-change="ctrl.GroupFilter1(Group1)">
                        <div>
                            <md-radio-button class="md-primary" value="Rutas" style="margin-right: 20px">Rutas</md-radio-button>
                        </div>
                        <div style="max-width: 50%">
                            <md-radio-button class="md-primary" value="Vendedores">Vendedores</md-radio-button>
                        </div>
                    </md-radio-group>
                </div>
                @*RUTAS*@
                <div ng-show="ctrl.RoutesFilters" class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">Rutas</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="queryRoute" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllRoutes" ng-change="ctrl.SelectAllChekboxesRoutes(selectAllRoutes); ctrl.getClientes();">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="route in ctrl.routes | filter:queryRoute">
                                <md-checkbox id="itemCheckBoxValue" ng-model="route.Checked" ng-disabled="route.Disabled" ng-change="ctrl.CountRoutes(); ctrl.getClientes()"></md-checkbox>
                                <p>{{route.Clave}} | {{route.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
                @*VENDEDORES*@
                <div ng-show="ctrl.SellersFilters" class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">Vendedores</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="querySeller" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllSeller" ng-change="ctrl.SelectAllChekboxesSellers(selectAllSeller)">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="s in ctrl.seller | filter:querySeller">
                                <md-checkbox id="itemCheckBoxValue" ng-model="s.Checked" ng-disabled="s.Disabled" ng-change="ctrl.CountSeller();"></md-checkbox>
                                <p>{{s.Clave}} | {{s.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="col-md-12">
                    <md-radio-group layout="row" ng-model="Group2" ng-change="ctrl.GroupFilter2(Group2)">
                        <div>
                            <md-radio-button class="md-primary" value="EsquemaClientes" style="margin-right: 20px">Esquema Clientes</md-radio-button>
                        </div>
                        <div>
                            <md-radio-button class="md-primary" value="Clientes">Clientes</md-radio-button>
                        </div>
                    </md-radio-group>
                </div>
                @*ESQUEMA DE CLIENTES*@
                <div ng-show="ctrl.SchemesClientsFilters" class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">Esquema De Clientes</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="querySchemesCli" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllSchemesCli" ng-change="ctrl.SelectAllChekboxesSchemesCli(selectAllSchemesCli)">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="scheme in ctrl.schemes | filter:querySchemes">
                                <md-checkbox id="itemCheckBoxValue" ng-model="scheme.Checked" ng-disabled="scheme.Disabled" ng-change="ctrl.CountSchemesClients()"></md-checkbox>
                                <p>{{scheme.Clave}} | {{scheme.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
                @*CLIENTES*@
                <div ng-show="ctrl.ClientsFilters" class="panel panel-default Panel-Default-Filter">
                    <div class="panel-heading Panel-Filter">Clientes</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="queryClients" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllClients" ng-change="ctrl.SelectAllChekboxesClients(selectAllClients)">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="clients in ctrl.clients | filter:queryClients">
                                <md-checkbox id="itemCheckBoxValue" ng-model="clients.Checked" ng-disabled="clients.Disabled" ng-change="ctrl.CountClients()"></md-checkbox>
                                <p>{{clients.Clave}} | {{clients.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                @*ESQUEMA DE PRODUCTOS*@
                <div class="panel panel-default Panel-Default-Filter" style="margin-top: 20px">
                    <div class="panel-heading Panel-Filter">Esquema De Productos</div>
                    <div class="panel-body">
                        <md-input-container id="searchFilterMargin" class="md-block">
                            <input id="searchFilterText" type="text" ng-model="querySchemesPro" placeholder="Búsqueda" />
                        </md-input-container>
                        <md-checkbox id="checkBoxSelectAll" ng-model="selectAllSchemesPro" ng-change="ctrl.SelectAllChekboxesSchemesPro(selectAllSchemesPro)">Seleccionar todos</md-checkbox>
                        <md-divider id="lineDivider"></md-divider>
                        <md-list id="listCheckBox" ng-cloak>
                            <md-list-item id="itemListCheckBox" ng-repeat="scheme in ctrl.schemesPro | filter:querySchemesPro">
                                <md-checkbox id="itemCheckBoxValue" ng-model="scheme.Checked" ng-disabled="scheme.Disabled" ng-change="ctrl.CountSchemesProducts();"></md-checkbox>
                                <p>{{scheme.Clave}} | {{scheme.Nombre}}</p>
                            </md-list-item>
                        </md-list>
                    </div>
                </div>
            </div>
        </div>

        <div id="viewer" class="row col-md-12">
            <div ng-show="ctrl.showErrorForm" ng-model="ctrl.ErrorEnviar">
                <div class="error-message col-md-12">{{ctrl.ErrorEnviar}}</div>
            </div>
        </div>

        <div class="row" id="marginSubmit">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <md-button id="buttomReports" type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.Clave, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right">Generar reporte</md-button>
            </div>
        </div>
    </div>
</div>