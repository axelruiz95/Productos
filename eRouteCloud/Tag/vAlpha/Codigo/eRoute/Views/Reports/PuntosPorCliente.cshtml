@{
    ViewBag.Title = "eRoute";
    Layout = "~/Views/Menu/Index.cshtml";
}

<script src="~/Controllers/js/controllers/puntosPorClienteController.js"></script>
<link href="~/Views/Menu/css/filter.css" rel="stylesheet" />
<div ng-controller="puntosPorClienteController as ctrl" ng-init="EstablecerReporte('@ViewBag.VAVClave')">
    <div class="panel-heading" style="background-color:#E51500; color:white; border-radius:12px">
        <h4> {{ctrl.titulo}} </h4>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div layout="column" ng-cloak>
                <form ng-submit="$event.preventDefault()" name="searchForm">
                    <md-autocomplete flex required style="width:290px;margin:10px 0 10px 0;" ng-disabled="ctrl.isDisabled"
                                     md-input-name="autocompleteField"
                                     md-no-cache="ctrl.noCache"
                                     md-selected-item="ctrl.selectedItem"
                                     md-search-text-change="ctrl.ShowLists(ctrl.selectedItem.value)"
                                     md-search-text="ctrl.searchText"
                                     md-selected-item-change="ctrl.nShowLists(ctrl.selectedItem.value); ctrl.GetClients(ctrl.selectedItem.value)"
                                     md-items="item in ctrl.querySearch(ctrl.searchText)"
                                     md-item-text="item.display"
                                     md-min-length="0"
                                     placeholder="Seleccionar centro de distribución">
                        <md-item-template>
                            <span md-highlight-text="ctrl.searchText">{{item.display}}</span>
                        </md-item-template>
                        <md-not-found>
                            No hay resultados para "{{ctrl.searchText}}".
                        </md-not-found>
                        <div ng-messages="searchForm.autocompleteField.$error" ng-if="searchForm.autocompleteField.$touched">
                            <div ng-message="required">You <b>must</b> have a favorite state.</div>
                        </div>
                    </md-autocomplete>
                </form>
            </div>
        </div>
    </div>
    
    <div class="row" ng-show="ctrl.showList" style="margin-top:10px">
        @*CLIENTES*@
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="padding-right:unset">
            <div class="panel panel-default">
                <div class="panel-heading" style="background-color:#E51500; color:white">Clientes</div>
                <div class="panel-body">
                    <md-input-container class="md-block" style="margin-top: 0; margin-bottom: 0;">
                        <input type="text" ng-model="queryClients" placeholder="Búsqueda" style="margin-left:10px; width:90%" />
                    </md-input-container>
                    <md-checkbox style="margin-top: 10px; margin-left:0; margin-bottom:0" ng-model="selectAllClients" ng-click="ctrl.SelectAllChekboxesClients(selectAllClients)">Seleccionar todos</md-checkbox>
                    <md-divider></md-divider>
                    <md-list ng-cloak style="max-height:310px; min-height:310px; overflow-y:auto; margin-left:-14px;">
                        <md-list-item ng-repeat="clients in ctrl.ListClients | filter:queryClients" style="margin-bottom:-9px; margin-top:0">
                            <md-checkbox ng-model="clients.Checked" ng-disabled="clients.Disabled" ng-change="ctrl.CountClients();" style="margin-right:2%"></md-checkbox>
                            <p> {{clients.RazonSocial}} </p>
                        </md-list-item>
                    </md-list>
                </div>
            </div>
        </div>
    </div>

    <div class="row" ng-show="ctrl.showList" style="margin-top:30px; margin-left:0px;">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <md-button type="submit" ng-click="ctrl.startbar(); ctrl.SubmitForm(ctrl.selectedItem.value, ctrl.ListClients, ctrl.VAVClave = @ViewBag.VAVClave)" class="md-raised login-input pull-right" style="background-color:#E51500; color:white;font-weight:bold;">Generar reporte</md-button>
        </div>
    </div>
</div>


