<div id="VendedoresBox" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- dialog header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="lblMsgTitulo"></h2>
            </div>

            <!-- dialog body -->
            <div class="scroll modal-body" >
                <form role="form">
                    <div class="container">

                        <!--Buscar-->
                        <div class="col-md-12 form-group" style="padding-right:50%;">
                            <input type="text" name="Buscar" ng-model="Buscar" class="form-control" placeholder="Buscar Configuracion..." />
                        </div>

                        <!--Tabla-->
                        <div class="col-md-12 form-group" style="padding-right:0px;">
                            <table class="table table-bordered">
                                <tr class="Lnegras">
                                    <td>{{translation.VENVendedorID}}</td>
                                    <td>{{translation.VENNombre}}</td>
                                    <td>{{translation.MODMODId1}}</td>
                                    <td>{{translation.VENTipo}}</td>
                                </tr>
                                <tr ng-repeat="x in cModulo | filter:Buscar" ng-click="SeleccionMo(x.Clave)">
                                    <td>{{x.Clave}}</td>
                                    <td>{{x.Nombre}}</td>
                                    <td>{{x.MOTNombre}}</td>
                                    <td>{{x.TipoIndice}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
            <!-- dialog buttons -->
            <div class="modal-footer" >                
                <button type="button" class="btn btn-default" data-dismiss="modal">{{translation.BTAceptar}}</button>
            </div>
        </div>
    </div>
</div>
