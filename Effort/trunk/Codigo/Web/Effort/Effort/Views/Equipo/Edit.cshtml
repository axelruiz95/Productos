@model Effort.Models.Equipo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">

    <div class="container">
        <h2>Editar Equipo</h2>
    </div>

    <form role="form" method="post" action="@Url.Action("Edit", "Equipo")">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Identificador:</label>
                        <input type="hidden" id="idEquipo" name="idEquipo" value="@Model.idEquipo" />
                        <input type="text" class="form-control" id="id" name="id" value="@Model.idEquipo" disabled>
                        @Html.ValidationMessageFor(model => model.idEquipo)
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Nombre:</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.nombre">
                         @Html.ValidationMessageFor(model => model.nombre)
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Correo electrónico:</label>
                        <input  type="email" class="form-control" id="correo" name="correo" value="@Model.correo">
                         @Html.ValidationMessageFor(model => model.correo)
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Contraseña:</label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" value="@Model.contrasena">
                         @Html.ValidationMessageFor(model => model.contrasena)
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Inversion de Horas:</label>
                        <input type="text" class="form-control" id="inversion_horas_dia" name="inversion_horas_dia" value="@Model.inversion_horas_dia">
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Costo por Hora:</label>
                        <input type="text" class="form-control" id="costo_hr" name="costo_hr" value="@Model.costo_hr">
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="sel1">Perfil:</label>
                        <select id="perfil" name="perfil" class="form-control">
                            <option value="Administrador">Administrador</option>
                            <option value="Usuario">Usuario</option>
                        </select>
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="sel1">Estatus:</label>
                        <select id="estado" name="estado" class="form-control">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <button class="btn btn-primary" type="submit" class="btn btn-default">Actualizar</button>
            <a class="btn btn-danger" data-toggle="modal" data-target="#eliminar">Eliminar</a>

            <!-- Modal -->
            <div class="modal fade" id="eliminar" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Eliminar</h4>
                        </div>
                        <div class="modal-body">
                            <p>Seguro que deseas eliminar el registro?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="~/Equipo/Delete?id=@Model.idEquipo" class="btn btn-default">Aceptar</a>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>



<script type="text/javascript">

    $(document).ready(function () {
        $("#perfil").val('@Model.perfil');
        $("#estado").val('@Model.Estado');
    });
</script>
