@model Effort.Models.DiasNoHabiles

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="container">

    <div class="container">
        <h2>Crear Fecha Inhabil</h2>
    </div>

    <form role="form" method="post" action="@Url.Action("Create", "FechasInhabiles")">

         <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <label for="usr">Fecha inhabil:</label>
                        <input type="text" class="form-control" id="fecha" name="fecha">
                        @Html.ValidationMessageFor(model => model.fecha)
                    </div>
                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                         <label for="sel1">Descripcion:</label>
                        <textarea type="text" class="form-control" id="descripcion" name="descripcion" ></textarea>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <button class="btn btn-primary" type="submit" class="btn btn-default">Crear</button>
        </div>
    </form>
</div>


<script type="text/javascript">
    // When the document is ready
    $(document).ready(function () {

        $('#fecha').datepicker({
            format: "dd/mm/yyyy",
            autoclose: true,
            clearBtn: true,
            language: "es",
            startDate: "0d"

        });

    });
</script>