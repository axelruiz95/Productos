<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblTitulo"
        style="@style/DarkGrayStyleClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C61F1B"
        android:gravity="center"
        android:text="Medium text"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/titulo_gnerico_textSizes" />

    <com.amesol.routelite.controles.TextBoxScanner
        android:id="@+id/textBoxScanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp" >

    </com.amesol.routelite.controles.TextBoxScanner>

    <LinearLayout
        android:id="@+id/layToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:paddingBottom="30dp"
        android:gravity="right">

        <TextView
            android:id="@+id/lblToken"
            style="@style/CommonDarkGrayStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ingresar ContraseÃ±a  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btnToken"
            style="@style/imageButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/token" />

    </LinearLayout>

</LinearLayout>
