<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTituloDialogoSaldoCambios"
            style="@style/DarkGrayStyleClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C61F1B"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/titulo_gnerico_textSizes" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2" >
            <TextView
                android:id="@+id/lblFamiliaProducto"
                style="@style/DarkGrayStyleClient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="#808080"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/consultar_inventario_lbls_textSizes" />

            <TextView
                android:id="@+id/lblSaldoDisponible"
                style="@style/DarkGrayStyleClient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="#808080"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/consultar_inventario_lbls_textSizes"
                android:gravity="right" />

            </LinearLayout>

        <ListView
            android:id="@+id/lstFamiliaSaldo"
            android:layout_width="match_parent"
            android:layout_height="202dp">
        </ListView>
        </LinearLayout>

</ScrollView>