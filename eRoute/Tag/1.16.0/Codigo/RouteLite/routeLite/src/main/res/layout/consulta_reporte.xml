<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:id="@+id/txtReporte"
            style="@style/DarkGrayStyleClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Medium Text"
            android:textSize="@dimen/seleccion_pedido_lbls_rutaYdia_textSize" />

        <Spinner
            android:id="@+id/SpReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_filtros"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_filtro_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_renglon1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/textFecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/SpComparador"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30" />

                <Button
                    android:id="@+id/btnFechaIni"
                    style="@style/buttonSquareStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Button" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_renglon2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="right">

                <Button
                    android:id="@+id/btnFechaFin"
                    style="@style/buttonSquareStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_filtro_general_detallado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            <RadioGroup
                    android:id="@+id/layout_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                android:gravity="center_horizontal">

                <RadioButton
                        android:id="@+id/radio_detallado"
                        style="@style/RedTextFontBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:checked="false"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/seleccion_clientes_lstview_textSize"
                    android:layout_marginRight="20dp" />

                <RadioButton
                        android:id="@+id/radio_general"
                        style="@style/RedTextFontBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:checked="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/seleccion_clientes_lstview_textSize"
                    android:layout_marginLeft="20dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_varios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

            <CheckBox
                    android:id="@+id/check_totalProductos"
                    style="@style/RedTextFontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:focusable="false"
                    android:text="CheckBox"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/seleccion_clientes_lstview_textSize"/>

            <CheckBox
                    android:id="@+id/check_totalizar"
                    style="@style/RedTextFontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:focusable="false"
                    android:text="CheckBox"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/seleccion_clientes_lstview_textSize"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_varios2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

            <CheckBox
                    android:id="@+id/check_devoluciones"
                    style="@style/RedTextFontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:focusable="false"
                    android:text="CheckBox"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/seleccion_clientes_lstview_textSize"/>

            <CheckBox
                    android:id="@+id/check_cambios"
                    style="@style/RedTextFontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:focusable="false"
                    android:text="CheckBox"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/seleccion_clientes_lstview_textSize"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layout_filtro_dia_clave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">

            <Spinner
                    android:id="@+id/SpDiaClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_filtro_clientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:visibility="gone">



            <TextView
                android:id="@+id/textCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="3dp"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:id="@+id/layout_filtro_todos_clientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="left"
                android:layout_gravity="left">

                <CheckBox
                    android:id="@+id/seleccionarTodosCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <ListView
                android:id="@+id/listClientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center_horizontal|center_vertical|center"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/btnContinuar"
            style="@style/buttonSquareStyle"
            android:layout_width="@dimen/general_button_width"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <include
        android:layout_weight="1"
        layout="@layout/footer_bar" />

</LinearLayout>
