<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblCliente"
        style="@style/DarkGrayStyleClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Medium Text"
        android:textSize="@dimen/seleccion_transaccion_lblCliente_textSize" />

    <TextView
        android:id="@+id/lblRuta"
        style="@style/DarkGrayStyleClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textSize="@dimen/seleccion_transaccion_lblsRutaDay" />

    <TextView
        android:id="@+id/lblDia"
        style="@style/DarkGrayStyleClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Small Text"
        android:textSize="@dimen/seleccion_transaccion_lblsRutaDay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:id="@+id/lblSubEmpresa"
            style="@style/DarkGrayStyleClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:text="SubEmpresa"
            android:visibility="gone"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <Spinner
            android:id="@+id/cboSubEmpresa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".76"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lstTransaccion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </ListView>

    <Button
        android:id="@+id/btnContinuar"
        style="@style/buttonSquareStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <include
        android:layout_weight="1"
        layout="@layout/footer_bar" />

</LinearLayout>