<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/lblAlertUser"
            style="@style/MisClientes_DarkLetterDialog"
            android:layout_width="@dimen/acceso_dia_diferente_lbls_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="@dimen/acceso_dia_diferente_lbls_textSize" />

        <EditText
            android:id="@+id/txtAlertUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="@dimen/acceso_dia_diferente_txts_textSize" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytAlertPassAnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:visibility="invisible">

        <TextView
            android:id="@+id/lblAlertPassAnt"
            style="@style/MisClientes_DarkLetterDialog"
            android:layout_width="@dimen/acceso_dia_diferente_lbls_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="@dimen/acceso_dia_diferente_lbls_textSize" />

        <EditText
            android:id="@+id/txtAlertPassAnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="@dimen/acceso_dia_diferente_txts_textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/lblAlertPass"
            style="@style/MisClientes_DarkLetterDialog"
            android:layout_width="@dimen/acceso_dia_diferente_lbls_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="@dimen/acceso_dia_diferente_lbls_textSize" />

        <EditText
            android:id="@+id/txtAlertPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:textSize="@dimen/acceso_dia_diferente_txts_textSize" />
    </LinearLayout>

</LinearLayout>