<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent" >
<LinearLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"    
    android:orientation="vertical" >


        <TextView
    android:id="@+id/lblTituloDialogoPromocion"
    style="@style/DarkGrayStyleClient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C61F1B"
    android:gravity="center"
    android:textColor="#FFFFFF"
    android:textSize="@dimen/titulo_gnerico_textSizes" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblImpuestoPromociones"
            style="@style/DarkGrayStyleClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808080"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/consultar_inventario_lbls_textSizes" />

      <TextView
            android:id="@+id/lblImpuestoPromocionesNoAplica"
            style="@style/DarkGrayStyleClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="TextView"
            android:textSize="@dimen/consultar_inventario_lbls_textSizes"
            android:visibility="gone" />
        <ListView
            android:id="@+id/lstImpuestoPromociones"
            android:layout_width="match_parent"
            android:layout_height="202dp" >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblPromocionesImpuesto"
            style="@style/DarkGrayStyleClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808080"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/consultar_inventario_lbls_textSizes" />

        <ListView
            android:id="@+id/lstPromocionesImpuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>
</LinearLayout>
  </ScrollView>
