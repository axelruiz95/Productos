<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground" >

    <LinearLayout
        android:id="@+id/layProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1.0"
        android:clickable="false"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:weightSum="1" >

            <TextView
                android:id="@+id/lblDescripcion_Mov"
                style="@style/RedTextFontBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Small Text"
                android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:weightSum="1" >

            <TextView
                android:id="@+id/lblCantidad_Mov"
                style="@style/BlackMiniDescriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:gravity="center_vertical"
                android:text="Small Text"
                android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

            <TextView
                android:id="@+id/lblUnidadProductoClave_Mov"
                style="@style/BlackMiniDescriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:gravity="center_vertical"
                android:text="Small Text"
                android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />
            <TextView
                android:id="@+id/lblTotal"
                style="@style/BlackMiniDescriptionText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:text="Small Text"
                android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
                android:gravity="right"
                android:visibility="gone"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>