<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elephantworks.movilvennda.Fragments.FragmentListaProductos">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/busqueda_productos"
            android:color="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/lvProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/busqueda_productos"/>

        <TextView
            android:id="@+id/emptyListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:paddingTop="20dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="@string/txtEmptyProductos" >
        </TextView>

    </RelativeLayout>


</FrameLayout>
