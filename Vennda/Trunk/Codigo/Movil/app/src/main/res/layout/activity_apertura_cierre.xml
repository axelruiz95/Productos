<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elephantworks.movilvennda.Vistas.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="Titulo"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1000dp"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="10dp">

            <Spinner
                android:id="@+id/sDenominacion"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:background="@drawable/drawable_spinner"
                android:drawSelectorOnTop="true"
                android:layout_marginRight="50dp"/>

            <ImageButton
                android:id="@+id/btnMenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_redondo"
                android:src="@drawable/restar"
                android:layout_marginRight="50dp"/>

            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:selectAllOnFocus="true"
                android:text="0"
                android:layout_marginRight="50dp"/>

            <ImageButton
                android:id="@+id/btnMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/anadir"
                android:background="@drawable/borde_redondo"
                android:layout_marginRight="50dp"/>


            <Button
                android:id="@+id/btnAgregar"
                android:text="@string/btnAgregar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/boton"
                android:textSize="@dimen/textos"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:padding="10dp">

            <ListView
                android:id="@+id/lvDinero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="10dp">

            <EditText
                android:id="@+id/etTotal"
                android:enabled="false"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="right"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginRight="50dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="0dip"
            android:layout_weight=".05"
            android:orientation="horizontal"
            android:gravity="center|bottom"
            android:padding="10dp">

            <Button
                android:id="@+id/btnAceptar"
                android:text="@string/btnAceptar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/boton"
                android:textSize="@dimen/textos"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
