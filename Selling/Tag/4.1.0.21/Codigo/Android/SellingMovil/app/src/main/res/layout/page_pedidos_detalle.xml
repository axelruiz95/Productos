<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_posicion_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/numeroPaginaTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="1/20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_producto_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/productoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="00000000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_ubicacion_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ubicacionPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="01-01-F"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_cantidad_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cantidadPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_surtidos_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/surtidosPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="0.0"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/surtido_motivo_rechazo_lbl"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/motRechazoPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="Ninguna"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/opciones1Btn"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="@string/surtido_opciones1_lbl"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_button_surtido"
            android:textSize="15sp"
            android:maxHeight="40dp"/>

        <Button
            android:id="@+id/opciones2Btn"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:text="@string/surtido_opciones2_lbl"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_button_surtido"
            android:textSize="15sp"
            android:maxHeight="40dp"/>

    </LinearLayout>


</LinearLayout>