<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblCliente"
        style="@style/DarkGrayStyleClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textSize="@dimen/seleccion_pedido_lblCliente_textSize" />

    <TextView
        android:id="@+id/lblRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Text"
        android:textSize="@dimen/seleccion_pedido_lbls_rutaYdia_textSize" />

    <TextView
        android:id="@+id/lblDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/seleccion_pedido_lbls_rutaYdia_textSize" />

    <ListView
        android:id="@+id/lstPedidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:weightSum="2" >

        <com.amesol.routelite.controles.CargasTextBoxScanner
            android:id="@+id/textBoxScanner"
            android:layout_width="@dimen/general_button_width"            
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" >
        </com.amesol.routelite.controles.CargasTextBoxScanner>

        <Button
            android:id="@+id/btnContinuar"
            style="@style/buttonSquareStyle"
                        android:layout_width="@dimen/general_button_width"            
            android:layout_height="wrap_content"
                        android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <include
        android:layout_weight="1"
        layout="@layout/footer_bar" />

</LinearLayout>