<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70sp" android:background="@color/Fondo">

    <ImageView
        android:id="@+id/elem_icono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher" android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/elem_texto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/elem_icono"
        android:text="Large Text"
        android:textColor="@color/Texto"
        android:textSize="38sp" android:layout_centerVertical="true"/>

</RelativeLayout>