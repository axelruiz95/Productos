<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="@color/Fondo" xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/visitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/visitar" android:textSize="20sp" android:height="70dp"/>

        <Button
            android:id="@+id/no_visitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/no_visitar" android:textSize="20sp" android:height="70sp"/>

        <TextView
            android:id="@+id/nombre_corto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/no_visitar"
            android:layout_toRightOf="@+id/visitar"
            android:gravity="center_vertical|center_horizontal"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Texto" />

    </RelativeLayout>
<com.amesol.pruebaandroid.ele.AmeViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_nombre_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacto"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/nombre_contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Texto"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/lbl_domicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/domicilio"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/domicilio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Texto"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_clave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clave"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/clave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Texto"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/lbl_razon_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/razon_social"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/razon_social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Texto"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lbl_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saldo"
            android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="26sp"/>

        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 2,580.50"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Texto" android:textSize="36sp"/>
    </LinearLayout>

    </com.amesol.pruebaandroid.ele.AmeViewFlipper>    

</LinearLayout>