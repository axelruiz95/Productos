<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblvalClavepromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="Clave"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <TextView
            android:id="@+id/lblvalNombrePromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="Nombre"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <TextView
            android:id="@+id/lblvalTipoPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="Tipo"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <TextView
            android:id="@+id/lblvalRangoPromocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:text="Rango"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblFinaliza"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:text="Finaliza"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblvalFinaliza"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:text="Fecha"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblSeleccionarProducto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text="SeleccionarProducto"
        android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

    <TextView
        android:id="@+id/lblCapturaCantidad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text="CapturaCantidad"
        android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

    <TextView
        android:id="@+id/lblPromocionAplicada"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text="PromociÃ³n Aplicada A"
        android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblEsquemas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text=""
        android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

    <TextView
        android:id="@+id/lblEnProductos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:maxLines="1"
        android:text="En Productos"
        android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/lblEnProductosVal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:text=""
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblRango1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblRango2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblRango3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lblRangoVal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <TextView
            android:id="@+id/lblRangoVal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />

        <TextView
            android:id="@+id/lblRangoVal3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/captura_pedido_lblListaPrecios_textSize" />
    </LinearLayout>

</LinearLayout>